        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }

    .table-responsive {
        padding: 0 30px 30px;
        overflow-x: auto;
        position: relative;
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
