        align-items: end;
        padding: 25px 30px;
        flex-wrap: wrap;
        background: linear-gradient(180deg, rgba(102, 126, 234, 0.03), transparent 60%);
    }

    .filter-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
        min-width: 180px;
    }

        .filter-item label {
            font-size: 0.9rem;
            color: #374151;
