            box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
        }

    .btn-cancel {
        background: #f3f4f6;
        color: #6b7280;
        border: 2px solid #e5e7eb;
    }

        .btn-cancel:hover {
            background: #e5e7eb;
            transform: translateY(-1px);
        }

