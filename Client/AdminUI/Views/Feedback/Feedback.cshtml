    }

    .modal-header {
        margin-bottom: 20px;
    }

        .modal-header h3 {
            color: #ef4444;
            margin: 0;
            font-size: 1.3rem;
            font-weight: 600;
        }

    .modal-body p {
        color: #6b7280;
        margin: 0 0 25px 0;
        font-size: 1rem;
        line-height: 1.5;
    }

    .modal-footer {
        display: flex;
        gap: 12px;
        justify-content: center;
    }

    .btn-confirm, .btn-cancel {
