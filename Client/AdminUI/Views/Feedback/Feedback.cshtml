            min-width: 640px;
        }

        .card-header {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }

            .card-header h2 {
                font-size: 1.5rem;
            }

        .filters {
            padding: 20px;
        }

        .table-responsive, .pager, .info {
            padding-left: 20px;
            padding-right: 20px;
        }
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            const $tableBody = $("#feedbackTable tbody");
            const $ratingFilter = $("#ratingFilter");
            const $pageSize = $("#pageSize");
            const $orderBy = $("#orderBy");
            const $applyBtn = $("#applyFilters");
            const $info = $("#feedbackInfo");
            const $pageNumbers = $("#pageNumbers");
            const $first = $("#firstPage");
            const $prev = $("#prevPage");
            const $next = $("#nextPage");
            const $last = $("#lastPage");
            const $loading = $("#loadingOverlay");

            // Delete modal elements
            const $deleteModal = $('#deleteModal');
            const $confirmDelete = $('#confirmDelete');
            const $cancelDelete = $('#cancelDelete');
            let deleteId = null;

            let currentPage = 1;
            let totalPages = 1;
            let totalCount = 0;

            function setLoading(on) {
                $loading.attr('aria-hidden', !on);
                if (on) $loading.addClass('visible');
                else $loading.removeClass('visible');
                $applyBtn.prop('disabled', on);
                $first.prop('disabled', on || currentPage === 1);
                $prev.prop('disabled', on || currentPage === 1);
                $next.prop('disabled', on || currentPage === totalPages);
                $last.prop('disabled', on || currentPage === totalPages);
            }

                    function buildODataFilter() {
            const rating = $ratingFilter.val();
            const searchText = ($("#searchText").val() || "").trim();
            const filters = [];
            if (rating) filters.push(`rating eq ${rating}`);

            if (searchText) {
                filters.push(`contains(tolower(Comment),'${searchText.toLowerCase()}')`);
            }

            return filters.length ? filters.join(" and ") : null;
        }

            function loadPage(page = 1) {
                currentPage = page;
                setLoading(true);

                const top = parseInt($pageSize.val(), 10) || 10;
                const skip = (page - 1) * top;
                const filter = buildODataFilter();
                const orderBy = $orderBy.val() || "createdAt desc";

                const data = { skip: skip, top: top, orderBy: orderBy };
                if (filter) data.filter = filter;

                $.ajax({
                    url: "/Feedback/GetAllOdata",
                    method: "GET",
                    data: data,
                    dataType: "json",
                    xhrFields: { withCredentials: true },
                    success: function (json) {
                        const items = (json.data || json.Data) || [];
                        totalCount = (json.totalCount || json.TotalCount) || 0;
                        renderTable(items);
                        totalPages = Math.max(1, Math.ceil(totalCount / top));
                        renderPager();
                        $info.text(`Hiển thị ${items.length} / ${totalCount} phản hồi. Trang ${currentPage} / ${totalPages}`);
                        $(".summary").text(`Tổng: ${totalCount}`);
                    },
                    error: function (xhr) {
                        console.error("AJAX error:", xhr.status, xhr.responseText);
                        $tableBody.html('<tr><td colspan="6" style="text-align: center; padding: 40px; color: #ef4444;">❌ Lỗi khi tải dữ liệu</td></tr>');
                        $info.text(`Lỗi server: ${xhr.status}`);
                    },
                    complete: function () {
                        setLoading(false);
                    }
                });
            }

                  function renderTable(items) {
            $tableBody.empty();
            if (!items || !items.length) {
                $tableBody.append('<tr><td colspan="7" style="text-align: center; padding: 40px; color: #6b7280;">📝 Không có phản hồi nào</td></tr>');
                return;
            }

            items.forEach(function (it, index) {
                const stt = (currentPage - 1) * parseInt($pageSize.val(), 10) + index + 1;
                const avatar = it.userAvatar || it.UserAvatar || "";
                const user = it.userName || it.user || it.userId || it.UserName || it.User || it.UserId || "";
                const rating = it.rating ?? it.Rating ?? "";
                const comment = it.comment || it.content || it.Comment || it.Content || "";
                const imagePath = it.imagePath || it.ImagePath || "";
                const createdVal = (it.createdAt || it.CreatedAt);
                const created = createdVal ? new Date(createdVal).toLocaleString() : "";

                // Tạo HTML cho avatar + tên
                let userHtml = "";
                if (avatar) {
                    userHtml = `<div class="user-cell">
                        <img src="${avatar}" alt="Avatar" class="user-avatar" loading="lazy"/>
                        <span class="user-name">${user}</span>
                    </div>`;
                } else {
                    userHtml = `<span class="user-name">${user}</span>`;
                }

                // Tạo HTML cho ảnh feedback
                let imageHtml = "";
                if (imagePath) {
                    imageHtml = `<img src="https://localhost:7221${imagePath}" alt="Feedback image" class="feedback-image" loading="lazy" onclick="showImageModal('https://localhost:7221${imagePath}')"/>`;
                } else {
                    imageHtml = '<span style="color: #6b7280;">Không có ảnh</span>';
                }

                // Tạo action buttons
                const actionsHtml = `
                    <div class="action-buttons">
                        <button class="btn-delete" data-id="${it.id || it.Id}" title="Xóa feedback">
                            🗑️ Xóa
                        </button>
                    </div>
                `;

                const $tr = $("<tr>").attr("tabindex", 0);
                $tr.append($("<td>").text(stt));
                $tr.append($("<td>").html(userHtml));
                $tr.append($("<td>").append(renderStars(rating)));
                $tr.append($("<td>").text(comment));
                $tr.append($("<td>").html(imageHtml));
                $tr.append($("<td>").text(created));
                $tr.append($("<td>").html(actionsHtml));
                $tableBody.append($tr);
            });
        }

            function renderStars(rating) {
                const $wrap = $("<div>").addClass("stars").attr("aria-hidden", "true");
                const r = parseInt(rating, 10) || 0;
                for (let i = 1; i <= 5; i++) {
                    const $s = $("<span>").addClass("star").toggleClass("filled", i <= r).text("★");
                    $wrap.append($s);
                }
                return $wrap;
            }

            function renderPager() {
                const maxButtons = 7;
                let start = Math.max(1, currentPage - Math.floor(maxButtons / 2));
                let end = start + maxButtons - 1;
                if (end > totalPages) {
                    end = totalPages;
                    start = Math.max(1, end - maxButtons + 1);
                }

                $pageNumbers.empty();
                for (let p = start; p <= end; p++) {
                    const $btn = $("<button>")
                        .addClass("page-number")
                        .attr("role", "button")
                        .attr("aria-label", `Trang ${p}`)
                        .toggleClass("active", p === currentPage)
                        .text(p)
                        .on("click", function () { if (p !== currentPage) loadPage(p); });
                    $pageNumbers.append($btn);
                }

                $first.prop("disabled", currentPage === 1);
                $prev.prop("disabled", currentPage === 1);
                $next.prop("disabled", currentPage === totalPages);
                $last.prop("disabled", currentPage === totalPages);
            }

            // Delete functionality
            function deleteFeedback(id) {
                $confirmDelete.prop('disabled', true).text('Đang xóa...');

                $.ajax({
                    url: `/Feedback/Delete/${id}`,
                    method: 'POST',
                    dataType: 'json',
                    xhrFields: { withCredentials: true },
                    success: function(response) {
                        $deleteModal.hide();

                        if (response.success) {
                            showToast('✅ Xóa feedback thành công!', 'success');

                            // Reload current page after successful deletion
                            setTimeout(() => {
                                loadPage(currentPage);
                            }, 500);
                        } else {
                            showToast('❌ ' + (response.message || 'Không thể xóa feedback'), 'error');
                        }
                    },
                    error: function(xhr) {
                        $deleteModal.hide();
                        console.error('Delete error:', xhr.status, xhr.responseText);
                        showToast('❌ Có lỗi xảy ra khi xóa feedback', 'error');
                    },
                    complete: function() {
                        $confirmDelete.prop('disabled', false).text('Xóa');
                        deleteId = null;
                    }
                });
            }

            // Toast notification function
            function showToast(message, type = 'success') {
                const toastId = 'toast-' + Date.now();
                const toast = $(`<div id="${toastId}" class="toast ${type}">${message}</div>`);

                $('body').append(toast);

                // Show toast
                setTimeout(() => {
                    toast.addClass('show');
                }, 100);

                // Hide and remove toast
                setTimeout(() => {
                    toast.removeClass('show');
                    setTimeout(() => {
                        toast.remove();
                    }, 300);
                }, 3000);
            }

            // Event handlers
            $applyBtn.on("click", function () { loadPage(1); });
            $pageSize.on("change", function () { loadPage(1); });
            $orderBy.on("change", function () { loadPage(1); });

            $first.on("click", function () { loadPage(1); });
            $prev.on("click", function () { loadPage(Math.max(1, currentPage - 1)); });
            $next.on("click", function () { loadPage(Math.min(totalPages, currentPage + 1)); });
            $last.on("click", function () { loadPage(totalPages); });

            // Delete event handlers
            $(document).on('click', '.btn-delete', function() {
                deleteId = $(this).data('id');
                $deleteModal.show();
            });

            $cancelDelete.on('click', function() {
                $deleteModal.hide();
                deleteId = null;
            });

            // Close modal when clicking outside
            $deleteModal.on('click', function(e) {
                if (e.target === this) {
                    $deleteModal.hide();
                    deleteId = null;
                }
            });

            $confirmDelete.on('click', function() {
                if (deleteId) {
                    deleteFeedback(deleteId);
                }
            });

            // Keyboard accessibility
            $(document).on('keydown', function(e) {
                if ($deleteModal.is(':visible')) {
                    if (e.key === 'Escape') {
                        $deleteModal.hide();
                        deleteId = null;
                    } else if (e.key === 'Enter') {
                        $confirmDelete.click();
                    }
                }
            });

            // Initial load
            loadPage(1);
        });
