    }

    .feedback-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
        cursor: pointer;
        transition: transform 0.2s;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

        .feedback-image:hover {
            transform: scale(1.05);
        }

    /* Modal cho xem ảnh full size */
