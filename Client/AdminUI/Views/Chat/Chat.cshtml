                        e.target.parentNode.style.transform = 'translateY(-2px)';
                    }
                });

                messageInput.addEventListener('blur', (e) => {
                    if (e.target.parentNode) {
                        e.target.parentNode.style.transform = 'translateY(0)';
                    }
                });
            }

            // Search user functionality
            const searchUser = document.getElementById('searchUser');
            if (searchUser) {
                searchUser.addEventListener('input', function () {
                    const search = this.value.toLowerCase();
                    document.querySelectorAll('.chat-item').forEach(item => {
                        const name = item.textContent.toLowerCase();
                        item.style.display = name.includes(search) ? '' : 'none';
                    });
                });
            }

            // Initialize components
            loadChatList();
            initEmojiPicker();
            initGifPicker();
            observeMessages();

            // Preload GIFs after 3 seconds
            setTimeout(preloadGIFs, 3000);

            // Auto-reset keys every 10 minutes
            setInterval(autoResetKeys, 10 * 60 * 1000);

            // Display usage stats every 5 minutes
            setInterval(displayApiUsage, 5 * 60 * 1000);

            console.log('🚀 Smart Chat with Optimized GIPHY initialized!');
        });

        const observeMessages = () => {
            const msgBox = document.getElementById('messages');
            if (!msgBox) return;

            const observer = new MutationObserver((mutations) => {
                mutations.forEach((mutation) => {
                    if (mutation.type === 'childList' && mutation.addedNodes.length > 0) {
                        const hasNewMessage = Array.from(mutation.addedNodes).some(node =>
                            node.classList && node.classList.contains('msg')
                        );

                        if (hasNewMessage) {
                            scrollToLatestMessage();
                        }
                    }
                });
            });

            observer.observe(msgBox, {
                childList: true,
                subtree: true
            });
        };

        // Utility functions
        window.setUserInfo = (userId, userName) => {
            const senderIdInput = document.getElementById('senderId');
            const senderNameInput = document.getElementById('senderName');
            if (senderIdInput) senderIdInput.value = userId;
            if (senderNameInput) senderNameInput.value = userName;
            loadChatList();
        };

        window.addNewChat = (friendId, friendName) => {
            const senderId = document.getElementById('senderId')?.value.trim();
            const senderName = document.getElementById('senderName')?.value.trim();

            if (!senderId || !senderName) {
                console.error('User info not set');
                return;
            }

            if (senderId === friendId) {
                console.error('Cannot chat with yourself');
                return;
            }

            set(ref(db, `userChats/${senderId}/${friendId}`), {
                name: friendName,
                timestamp: Date.now(),
                lastMessage: ''
            }).then(() => {
                loadChatList();
            }).catch(error => {
                console.error('Error adding new chat:', error);
            });
        };

        // Global functions
        window.scrollToLatestMessage = scrollToLatestMessage;
        window.displayApiUsage = displayApiUsage;
                // chat-page-init.js
        function getQueryParams() {
          const params = new URLSearchParams(window.location.search);
          return {
            senderId: params.get('senderId') || '',
            senderName: params.get('senderName') || '', // optional
            receiverId: params.get('receiverId') || '',
            receiverName: params.get('receiverName') || '' // optional
          };
        }

        document.addEventListener('DOMContentLoaded', () => {
          const q = getQueryParams();

          if (!q.receiverId) {
            // Nothing to auto-open
            return;
          }

          // Nếu server đã xác thực, bạn có thể bỏ qua senderId từ query và lấy senderId từ server-rendered hidden input
          const serverSenderId = document.getElementById('senderId')?.value?.trim();
          const finalSenderId = serverSenderId || q.senderId;

          // Fill hidden inputs if present
          const senderIdInput = document.getElementById('senderId');
          const senderNameInput = document.getElementById('senderName');
          if (senderIdInput && finalSenderId) senderIdInput.value = finalSenderId;
          if (senderNameInput && q.senderName) senderNameInput.value = q.senderName;

          // Ensure setUserInfo exists
          if (typeof window.setUserInfo === 'function') {
            window.setUserInfo(finalSenderId || '', q.senderName || '');
          }

          // Ensure openChat exists
          if (typeof window.openChat === 'function') {
            const senderNameForOpen = q.senderName || (senderNameInput ? senderNameInput.value : '');
            const receiverNameForOpen = q.receiverName || q.receiverId; // fallback to id if no name
            window.openChat(finalSenderId || '', senderNameForOpen, q.receiverId, receiverNameForOpen);
          } else {
            console.warn('openChat function not found on this page. Make sure your chat UI exposes openChat(senderId, senderName, receiverId, receiverName).');
          }
        });
    </script>
