@{
    ViewData["Title"] = "Quản lý Discount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-blue: #3b82f6;
        --success-green: #10b981;
        --warning-orange: #f59e0b;
        --danger-red: #ef4444;
        --gray-200: #e5e7eb;
        --gray-600: #6b7280;
        --gray-900: #111827;
        --bright-red: #f43f5e;
    }

    body {
        background-color: #e4ebfd;
    }

    .page-header {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        border: 1px solid var(--gray-200);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--gray-900);
        margin: 0;
    }

    .create-btn {
        background: var(--primary-blue);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s;
        box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
    }

        .create-btn:hover {
            background: #2563eb;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(59, 130, 246, 0.4);
        }

    .filters-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid var(--gray-200);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    }

    .filter-row {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr auto;
        gap: 1rem;
        align-items: end;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .form-control {
        border: 1px solid var(--gray-200);
        border-radius: 8px;
        padding: 0.75rem;
        font-size: 0.875rem;
        transition: all 0.2s;
        background: white;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

    .filter-btn {
        background: var(--primary-blue);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.25rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        height: fit-content;
    }

        .filter-btn:hover {
            background: #2563eb;
            transform: translateY(-1px);
        }

    .reset-btn {
        background: var(--gray-600);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.25rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        height: fit-content;
        margin-left: 0.5rem;
    }

        .reset-btn:hover {
            background: #374151;
            transform: translateY(-1px);
        }

    .discounts-container {
        background: white;
        border-radius: 12px;
        border: 1px solid var(--gray-200);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .table-header {
        background: #f8fafc;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--gray-900);
        margin: 0;
    }

    .results-count {
        color: var(--gray-600);
        font-size: 0.875rem;
    }

    .discount-table {
        width: 100%;
        border-collapse: collapse;
    }

        .discount-table th {
            background: #f8fafc;
            padding: 1rem 1.5rem;
            text-align: left;
            font-weight: 600;
            color: var(--gray-900);
            border-bottom: 1px solid var(--gray-200);
            font-size: 0.875rem;
        }

        .discount-table td {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            vertical-align: middle;
        }

        .discount-table tr:hover {
            background: #f9fafb;
        }

    .discount-code {
        font-weight: 600;
        color: var(--primary-blue);
        font-family: 'Courier New', monospace;
        background: rgba(59, 130, 246, 0.1);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.875rem;
    }

    .discount-description {
        color: var(--gray-600);
        font-size: 0.875rem;
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .discount-value {
        font-weight: 600;
        color: var(--success-green);
        font-size: 1rem;
    }

    .discount-amount {
        color: var(--gray-900);
        font-size: 0.875rem;
    }

    .discount-dates {
        font-size: 0.75rem;
        color: var(--gray-600);
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-active {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success-green);
    }

    .status-inactive {
        background: rgba(107, 114, 128, 0.1);
        color: var(--gray-600);
    }

    .status-expired {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger-red);
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .action-btn {
        padding: 0.5rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        color: white;
        font-size: 0.875rem;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .edit-btn {
        background: var(--primary-blue);
    }

        .edit-btn:hover {
            background: #2563eb;
            transform: scale(1.1);
        }

    .delete-btn {
        background: var(--danger-red);
    }

        .delete-btn:hover {
            background: #dc2626;
            transform: scale(1.1);
        }

    .view-btn {
        background: var(--gray-600);
    }

        .view-btn:hover {
            background: #374151;
            transform: scale(1.1);
        }

    .code-type-badge {
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .type-general {
        background: rgba(59, 130, 246, 0.1);
        color: var(--primary-blue);
    }

    .type-stadium {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning-orange);
    }

    .pagination {
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: between;
        align-items: center;
        border-top: 1px solid var(--gray-200);
        background: #f8fafc;
    }

    .pagination-info {
        color: var(--gray-600);
        font-size: 0.875rem;
    }

    .pagination-controls {
        display: flex;
        gap: 0.5rem;
    }

    .pagination-btn {
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--gray-200);
        background: white;
        color: var(--gray-600);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.875rem;
    }

        .pagination-btn:hover {
            background: var(--primary-blue);
            color: white;
            border-color: var(--primary-blue);
        }

        .pagination-btn.active {
            background: var(--primary-blue);
            color: white;
            border-color: var(--primary-blue);
        }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: var(--gray-600);
    }

    .empty-icon {
        font-size: 3rem;
        color: var(--gray-200);
        margin-bottom: 1rem;
    }

    .stadiums-list {
        font-size: 0.75rem;
        color: var(--gray-600);
    }

    .stadium-tag {
        display: inline-block;
        background: rgba(16, 185, 129, 0.1);
        color: var(--success-green);
        padding: 0.125rem 0.5rem;
        border-radius: 12px;
        margin: 0.125rem;
        font-size: 0.7rem;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .filter-row

    {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .page-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    .discount-table {
        font-size: 0.8rem;
    }

        .discount-table th,
        .discount-table td {
            padding: 0.75rem;
        }

    }
</style>

