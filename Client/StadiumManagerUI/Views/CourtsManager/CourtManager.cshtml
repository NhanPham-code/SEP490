@{
    ViewData["Title"] = "Quản Lý Sân";
    int stadiumId = ViewBag.StadiumId; // Giả sử stadiumId được truyền qua ViewBag
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/css/stadium/courts.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f7fa;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table {
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead {
                background-color: #2c3e50;
                color: #fff;
            }

            .table th, .table td {
                vertical-align: middle;
                padding: 12px;
            }

            .table tbody tr:hover {
                background-color: #f8f9fa;
            }

        .badge-available {
            background-color: #28a745;
        }

        .badge-unavailable {
            background-color: #dc3545;
        }

        h2 {
            color: #2c3e50;
            font-weight: 600;
        }

        .container {
            max-width: 1500px;
        }

        .swal2-input {
            margin-bottom: 10px;
        }

        .swal2-select[multiple] {
            height: 150px; /* Tăng chiều cao để hiển thị nhiều lựa chọn */
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="card p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Danh Sách Sân của Sân Vận Động ID: @stadiumId</h2>
                <button class="btn btn-primary" onclick="addCourt()">
                    <i class="ri-add-line me-2"></i>Thêm Sân Mới
                </button>
            </div>
            <!-- Bảng Sân -->
            <div class="table-responsive">
                <table class="table table-hover" id="courtsTable">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Tên Sân</th>
                            <th scope="col">Loại Thể Thao</th>
                            <th scope="col">Giá/Giờ</th>
                            <th scope="col">Trạng Thái</th>
                            <th scope="col">Ngày Tạo</th>
                            <th scope="col">Ngày Cập Nhật</th>
                            <th scope="col">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Các hàng sẽ được điền bằng AJAX -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Tải danh sách sân khi trang được tải
            loadCourts(@stadiumId);

            // Hàm tải danh sách sân bằng AJAX
            function loadCourts(stadiumId) {
                $.ajax({
                    url: '@Url.Action("GetAllCourts", "CourtsManager")',
                    type: 'GET',
                    dataType: 'json',
                    data: { stadiumId: stadiumId },
                    success: function (data) {
                        console.log('Danh sách sân:', data);
                        var rows = '';
                        $.each(data, function (index, court) {
                            let formattedPrice = court.pricePerHour != null ? Number(court.pricePerHour).toLocaleString('vi-VN') + ' VND' : 'N/A';
                            let availabilityBadge = court.isAvailable
                                ? '<span class="badge badge-available">Có Sẵn</span>'
                                : '<span class="badge badge-unavailable">Không Có Sẵn</span>';
                            let actionButtons = `
                                <button class="btn btn-sm btn-outline-primary me-2" onclick="editCourt(${court.id})">
                                    <i class="ri-edit-line"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger me-2" onclick="deleteCourt(${court.id})">
                                    <i class="ri-delete-bin-line"></i>
                                </button>`;
                            if (court.sportType === 'Bóng đá') {
                                actionButtons += `
                                    <button class="btn btn-sm btn-outline-info" onclick="editCourtRelation(${court.id})">
                                        <i class="ri-links-line"></i>
                                    </button>`;
                            }
                            rows += `<tr>
                                <td>${court.id}</td>
                                <td>${court.name}</td>
                                <td>${court.sportType}</td>
                                <td>${formattedPrice}</td>
                                <td>${availabilityBadge}</td>
                                <td>${new Date(court.createdAt).toLocaleString('vi-VN')}</td>
                                <td>${new Date(court.updatedAt).toLocaleString('vi-VN')}</td>
                                <td>${actionButtons}</td>
                            </tr>`;
                        });
                        $('#courtsTable tbody').html(rows);
                    },
                    error: function (xhr, status, error) {
                        console.error('Lỗi khi tải danh sách sân:', error);
                        $('#courtsTable tbody').html('<tr><td colspan="8" class="text-center text-danger">Lỗi khi tải danh sách sân. Vui lòng thử lại.</td></tr>');
                    }
                });
            }

            // Popup Thêm Sân
            window.addCourt = function () {
                Swal.fire({
                    title: 'Thêm Sân Mới',
                    html: `
                        <div class="text-start">
                            <label for="courtName" class="form-label">Tên Sân</label>
                            <input id="courtName" class="swal2-input" placeholder="Nhập tên sân" maxlength="255">

                            <label for="sportType" class="form-label">Loại Thể Thao</label>
                            <select id="sportType" class="swal2-input">
                                <option value="" disabled selected>Chọn loại thể thao</option>
                                <option value="Bóng Đá">Bóng Đá</option>
                                <option value="Bóng Rổ">Bóng Rổ</option>
                                <option value="Quần Vợt">Quần Vợt</option>
                                <option value="Cầu Lông">Cầu Lông</option>
                            </select>

                            <label for="pricePerHour" class="form-label">Giá mỗi Giờ (VND)</label>
                            <input id="pricePerHour" class="swal2-input" type="number" step="0.01" placeholder="Nhập giá mỗi giờ">

                            <label for="isAvailable" class="form-label">Trạng Thái</label>
                            <select id="isAvailable" class="swal2-input">
                                <option value="true">Có Sẵn</option>
                                <option value="false">Không Có Sẵn</option>
                            </select>
                        </div>
                    `,
                    showCancelButton: true,
                    confirmButtonText: 'Thêm Sân',
                    cancelButtonText: 'Hủy',
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    focusConfirm: false,
                    preConfirm: () => {
                        const courtName = document.getElementById('courtName').value;
                        const sportType = document.getElementById('sportType').value;
                        const pricePerHour = document.getElementById('pricePerHour').value;
                        const isAvailable = document.getElementById('isAvailable').value === 'true';

                        // Kiểm tra đầu vào
                        if (!courtName || courtName.length > 255) {
                            Swal.showValidationMessage('Tên sân bắt buộc và tối đa 255 ký tự.');
                            return false;
                        }
                        if (!sportType || sportType.length > 50) {
                            Swal.showValidationMessage('Loại thể thao bắt buộc và tối đa 50 ký tự.');
                            return false;
                        }
                        if (!pricePerHour || pricePerHour <= 0) {
                            Swal.showValidationMessage('Giá mỗi giờ phải là số dương.');
                            return false;
                        }

                        return {
                            stadiumId: @stadiumId,
                            name: courtName,
                            sportType: sportType,
                            pricePerHour: parseFloat(pricePerHour),
                            isAvailable: isAvailable
                        };
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("CreateCourt", "CourtsManager")',
                            type: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify(result.value),
                            success: function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Thêm Sân Thành Công',
                                    text: 'Sân đã được thêm thành công.',
                                    confirmButtonColor: '#3085d6',
                                    confirmButtonText: 'Đóng'
                                }).then(() => {
                                    loadCourts(@stadiumId); // Tải lại bảng
                                });
                            },
                            error: function (xhr, status, error) {
                                console.error('Lỗi khi thêm sân:', error);
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Lỗi',
                                    text: 'Không thể thêm sân. Vui lòng thử lại.',
                                    confirmButtonColor: '#d33',
                                    confirmButtonText: 'Đóng'
                                });
                            }
                        });
                    }
                });
            };

            // Popup Chỉnh Sửa Sân
            window.editCourt = function (courtId) {
                // Lấy thông tin sân hiện tại
                $.ajax({
                    url: '@Url.Action("GetCourtById", "CourtsManager")',
                    type: 'GET',
                    dataType: 'json',
                    data: { id: courtId },
                    success: function (court) {
                        Swal.fire({
                            title: 'Chỉnh Sửa Sân',
                            html: `
                                <div class="text-start">
                                    <label for="courtName" class="form-label">Tên Sân</label>
                                    <input id="courtName" class="swal2-input" placeholder="Nhập tên sân" maxlength="255" value="${court.name}">

                                    <label for="sportType" class="form-label">Loại Thể Thao</label>
                                    <select id="sportType" class="swal2-input">
                                        <option value="" disabled>Chọn loại thể thao</option>
                                        <option value="Bóng Đá" ${court.sportType === 'Bóng Đá' ? 'selected' : ''}>Bóng Đá</option>
                                        <option value="Bóng Rổ" ${court.sportType === 'Bóng Rổ' ? 'selected' : ''}>Bóng Rổ</option>
                                        <option value="Quần Vợt" ${court.sportType === 'Quần Vợt' ? 'selected' : ''}>Quần Vợt</option>
                                        <option value="Cầu Lông" ${court.sportType === 'Cầu Lông' ? 'selected' : ''}>Cầu Lông</option>
                                    </select>

                                    <label for="pricePerHour" class="form-label">Giá mỗi Giờ (VND)</label>
                                    <input id="pricePerHour" class="swal2-input" type="number" step="0.01" placeholder="Nhập giá mỗi giờ" value="${court.pricePerHour}">

                                    <label for="isAvailable" class="form-label">Trạng Thái</label>
                                    <select id="isAvailable" class="swal2-input">
                                        <option value="true" ${court.isAvailable ? 'selected' : ''}>Có Sẵn</option>
                                        <option value="false" ${court.isAvailable ? '' : 'selected'}>Không Có Sẵn</option>
                                    </select>
                                </div>
                            `,
                            showCancelButton: true,
                            confirmButtonText: 'Lưu Thay Đổi',
                            cancelButtonText: 'Hủy',
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            focusConfirm: false,
                            preConfirm: () => {
                                const courtName = document.getElementById('courtName').value;
                                const sportType = document.getElementById('sportType').value;
                                const pricePerHour = document.getElementById('pricePerHour').value;
                                const isAvailable = document.getElementById('isAvailable').value === 'true';

                                // Kiểm tra đầu vào
                                if (!courtName || courtName.length > 255) {
                                    Swal.showValidationMessage('Tên sân bắt buộc và tối đa 255 ký tự.');
                                    return false;
                                }
                                if (!sportType || sportType.length > 50) {
                                    Swal.showValidationMessage('Loại thể thao bắt buộc và tối đa 50 ký tự.');
                                    return false;
                                }
                                if (!pricePerHour || pricePerHour <= 0) {
                                    Swal.showValidationMessage('Giá mỗi giờ phải là số dương.');
                                    return false;
                                }

                                return {
                                    id: courtId,
                                    stadiumId: @stadiumId,
                                    name: courtName,
                                    sportType: sportType,
                                    pricePerHour: parseFloat(pricePerHour),
                                    isAvailable: isAvailable
                                };
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                $.ajax({
                                    url: '@Url.Action("UpdateCourt", "CourtsManager")',
                                    type: 'PUT',
                                    contentType: 'application/json',
                                    data: JSON.stringify(result.value),
                                    success: function (response) {
                                        Swal.fire({
                                            icon: 'success',
                                            title: 'Cập Nhật Thành Công',
                                            text: 'Sân đã được cập nhật thành công.',
                                            confirmButtonColor: '#3085d6',
                                            confirmButtonText: 'Đóng'
                                        }).then(() => {
                                            loadCourts(@stadiumId); // Tải lại bảng
                                        });
                                    },
                                    error: function (xhr, status, error) {
                                        console.error('Lỗi khi cập nhật sân:', error);
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Lỗi',
                                            text: 'Không thể cập nhật sân. Vui lòng thử lại.',
                                            confirmButtonColor: '#d33',
                                            confirmButtonText: 'Đóng'
                                        });
                                    }
                                });
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error('Lỗi khi lấy thông tin sân:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Không thể lấy thông tin sân. Vui lòng thử lại.',
                            confirmButtonColor: '#d33',
                            confirmButtonText: 'Đóng'
                        });
                    }
                });
            };

            // Popup Chỉnh Sửa Quan Hệ Sân (cho sân Bóng Đá)
            window.editCourtRelation = function (parentCourtId) {
                // Lấy danh sách sân để chọn sân con
                $.ajax({
                    url: '@Url.Action("GetAllCourts", "CourtsManager")',
                    type: 'GET',
                    dataType: 'json',
                    data: { stadiumId: @stadiumId },
                    success: function (courts) {
                        let courtOptions = '<option value="" disabled>Chọn sân con (giữ Ctrl để chọn nhiều)</option>';
                        $.each(courts, function (index, court) {
                            if (court.id !== parentCourtId) {
                                courtOptions += `<option value="${court.id}">${court.name} (${court.sportType})</option>`;
                            }
                        });

                        Swal.fire({
                            title: 'Chỉnh Sửa Quan Hệ Sân',
                            html: `
                                <div class="text-start">
                                    <label for="childCourtIds" class="form-label">Sân Con</label>
                                    <select id="childCourtIds" class="swal2-input swal2-select" multiple>${courtOptions}</select>
                                </div>
                            `,
                            showCancelButton: true,
                            confirmButtonText: 'Thêm Quan Hệ',
                            cancelButtonText: 'Hủy',
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            focusConfirm: false,
                            preConfirm: () => {
                                const childCourtIds = Array.from(document.getElementById('childCourtIds').selectedOptions).map(option => parseInt(option.value));

                                // Kiểm tra đầu vào
                                if (!childCourtIds || childCourtIds.length === 0) {
                                    Swal.showValidationMessage('Vui lòng chọn ít nhất một sân con.');
                                    return false;
                                }

                                // Tạo danh sách quan hệ sân
                                const courtRelations = childCourtIds.map(childId => ({
                                    parentCourtId: parentCourtId,
                                    childCourtId: childId
                                }));

                                return courtRelations;
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                $.ajax({
                                    url: '@Url.Action("CreateCourtRelations", "CourtsManager")',
                                    type: 'POST',
                                    contentType: 'application/json',
                                    data: JSON.stringify(result.value),
                                    success: function (response) {
                                        Swal.fire({
                                            icon: 'success',
                                            title: 'Thêm Quan Hệ Thành Công',
                                            text: 'Các quan hệ sân đã được thêm thành công.',
                                            confirmButtonColor: '#3085d6',
                                            confirmButtonText: 'Đóng'
                                        });
                                    },
                                    error: function (xhr, status, error) {
                                        console.error('Lỗi khi thêm quan hệ sân:', error);
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Lỗi',
                                            text: 'Không thể thêm quan hệ sân. Vui lòng thử lại.',
                                            confirmButtonColor: '#d33',
                                            confirmButtonText: 'Đóng'
                                        });
                                    }
                                });
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error('Lỗi khi lấy danh sách sân:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Không thể lấy danh sách sân. Vui lòng thử lại.',
                            confirmButtonColor: '#d33',
                            confirmButtonText: 'Đóng'
                        });
                    }
                });
            };

            // Xóa Sân
            window.deleteCourt = function (courtId) {
                Swal.fire({
                    title: 'Bạn có chắc chắn?',
                    text: "Hành động này không thể hoàn tác!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Có, xóa sân!',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("DeleteCourt", "CourtsManager")',
                            type: 'DELETE',
                            dataType: 'json',
                            data: { id: courtId },
                            success: function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Đã Xóa!',
                                    text: 'Sân đã được xóa thành công.',
                                    confirmButtonColor: '#3085d6',
                                    confirmButtonText: 'Đóng'
                                }).then(() => {
                                    loadCourts(@stadiumId); // Tải lại bảng
                                });
                            },
                            error: function (xhr, status, error) {
                                console.error('Lỗi khi xóa sân:', error);
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Lỗi',
                                    text: 'Không thể xóa sân. Vui lòng thử lại.',
                                    confirmButtonColor: '#d33',
                                    confirmButtonText: 'Đóng'
                                });
                            }
                        });
                    }
                });
            };
        });
    </script>
</body>
</html>