                                        ${index === 0 ? '<div class="primary-badge">Chính</div>' : ''}
                                        <button type="button" class="delete-image-btn" onclick="deleteCurrentImage(this)" title="Xóa ảnh">
                                            <i class="ri-delete-bin-line"></i>
