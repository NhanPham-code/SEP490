            background: linear-gradient(135deg, #2563eb, #7c3aed);
        }

        .header-glass {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .logo-gradient {
            background: linear-gradient(135deg, #3b82f6, #8b5cf6, #22c55e);
            background-size: 300% 300%;
            animation: gradientShift 8s ease-in-out infinite;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
        }

        .btn-gradient:active {
            transform: translateY(0);
        }

        .glass-effect {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(20px) saturate(120%);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }

        .glass-effect:hover {
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .search-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            border: 2px solid rgba(255, 255, 255, 0.4);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .search-container:focus-within {
            background: rgba(255, 255, 255, 1);
            border-color: rgba(59, 130, 246, 0.5);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1), 0 4px 25px rgba(0, 0, 0, 0.12);
            transform: translateY(-1px);
        }

        .nav-link {
            position: relative;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 16px;
            overflow: hidden;
        }

        .nav-link:hover {
            color: #3b82f6;
            background: rgba(59, 130, 246, 0.08);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.15);
        }

        .nav-link.active {
            color: #3b82f6;
            background: rgba(59, 130, 246, 0.12);
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2);
        }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
            transition: width 0.3s ease;
            z-index: -1;
        }

        .nav-link:hover::before {
            width: 100%;
        }

        .action-btn {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: visible;
        }

        .action-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .action-btn:active {
            transform: translateY(-1px) scale(0.98);
        }

        .notification-badge {
            animation: pulse-slow 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
            z-index: 10;
        }

        .notification-dot {
            animation: shake 0.8s ease-in-out infinite;
            z-index: 10;
        }

        .badge-container {
            position: relative;
            display: inline-block;
        }

        .badge-container .notification-badge {
            position: absolute;
            top: -6px;
            right: -6px;
            z-index: 15;
        }

        .badge-container .notification-dot {
            position: absolute;
            top: -2px;
            right: -2px;
            z-index: 15;
        }

        .dropdown-solid {
            background: #ffffff !important;
            backdrop-filter: none !important;
            border: 1px solid #e2e8f0;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }

        @@media (max-width: 768px) {
            .header-glass {
                padding: 0 16px;
            }

            .nav-section {
                display: none;
            }

            .mobile-nav-toggle {
                display: block;
            }
        }

        .tooltip {
            position: absolute;
            z-index: 1000;
            padding: 8px 12px;
            background: rgba(15, 23, 42, 0.9);
            backdrop-filter: blur(8px);
            color: white;
            font-size: 0.75rem;
            font-weight: 500;
            border-radius: 8px;
            white-space: nowrap;
            pointer-events: none;
            opacity: 0;
            transform: translateY(4px);
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .tooltip.show {
            opacity: 1;
            transform: translateY(0);
        }

        .notification-panel,
        .chat-panel,
        .search-suggestions {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(226, 232, 240, 0.8);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }

        .logo-container:hover .animate-float {
            animation-duration: 2s;
        }

        .search-suggestions {
            border: 1px solid rgba(226, 232, 240, 0.5);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes bounceSubtle {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-4px);
            }
        }

        @@keyframes glow {
            0% {
                box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
            }

            100% {
                box-shadow: 0 0 20px rgba(59, 130, 246, 0.8);
            }
        }

        @@keyframes float {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-6px);
            }
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        @@keyframes pulse-slow {
            0% {
                box-shadow: 0 0 0 0 #3b82f6;
            }

            70% {
                box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
            }
        }

        @@keyframes expand {
            from {
                width: 0;
                opacity: 0;
            }

            to {
                width: 320px;
                opacity: 1;
            }
        }

        @@keyframes collapse {
            from {
                width: 320px;
                opacity: 1;
            }

            to {
                width: 0;
                opacity: 0;
            }
        }

        @@keyframes shake {

            0%,
