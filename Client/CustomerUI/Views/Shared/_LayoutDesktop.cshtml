    <script>
        // Enhanced scroll behavior with performance optimization
        let lastScrollTop = 0;
        const header = document.querySelector('header');
        let ticking = false;

        function updateHeader() {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

            if (scrollTop > 100) {
                if (scrollTop > lastScrollTop && !header.classList.contains('header-hidden')) {
                    // Scrolling down
                    header.classList.add('header-hidden');
                    header.style.transform = 'translateY(-100%)';
                } else if (scrollTop < lastScrollTop && header.classList.contains('header-hidden')) {
                    // Scrolling up
                    header.classList.remove('header-hidden');
                    header.style.transform = 'translateY(0)';
                }
            } else {
                header.classList.remove('header-hidden');
                header.style.transform = 'translateY(0)';
            }

            lastScrollTop = scrollTop;
            ticking = false;
        }

        window.addEventListener('scroll', function () {
            if (!ticking) {
                requestAnimationFrame(updateHeader);
                ticking = true;
            }
        }, { passive: true });

        // Enhanced keyboard navigation
        document.addEventListener('keydown', function (e) {
            // Escape key closes all dropdowns
            if (e.key === 'Escape') {
                // Dispatch Alpine.js event to close all dropdowns
                document.dispatchEvent(new CustomEvent('keydown-escape'));
            }

            // Ctrl/Cmd + K opens search
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                // Trigger search expansion
                const searchButton = document.querySelector('[x-on\\:click="toggleSearch()"]');
                if (searchButton) {
                    searchButton.click();
                }
            }
        });

        // Enhanced button interactions with better performance
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '50px'
        };

        const buttonObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const btn = entry.target;
                    btn.addEventListener('mouseenter', handleButtonHover);
                    btn.addEventListener('mouseleave', handleButtonLeave);
                } else {
                    const btn = entry.target;
                    btn.removeEventListener('mouseenter', handleButtonHover);
                    btn.removeEventListener('mouseleave', handleButtonLeave);
                }
            });
        }, observerOptions);

        function handleButtonHover(e) {
            this.style.transform = 'translateY(-2px) scale(1.05)';
        }

        function handleButtonLeave(e) {
            this.style.transform = 'translateY(0) scale(1)';
        }

        // Observe all action buttons
        document.querySelectorAll('.action-btn').forEach(btn => {
            buttonObserver.observe(btn);
        });

        // Performance optimization
        window.addEventListener('load', function () {
            document.body.classList.add('loaded');

            // Preload critical resources
            const criticalImages = [
                '/favicon.png'
            ];

            criticalImages.forEach(src => {
                const img = new Image();
                img.src = src;
            });
        });

        // Enhanced tooltip system
        function initTooltips() {
            const tooltipElements = document.querySelectorAll('[title]');

            tooltipElements.forEach(element => {
                element.addEventListener('mouseenter', showTooltip);
                element.addEventListener('mouseleave', hideTooltip);
            });
        }

        function showTooltip(e) {
            const title = this.getAttribute('title');
            if (!title) return;

            this.setAttribute('data-title', title);
            this.removeAttribute('title');

            const tooltip = document.createElement('div');
            tooltip.className = 'tooltip show';
            tooltip.textContent = title;

            document.body.appendChild(tooltip);

            const rect = this.getBoundingClientRect();
            tooltip.style.left = rect.left + (rect.width / 2) - (tooltip.offsetWidth / 2) + 'px';
            tooltip.style.top = rect.top - tooltip.offsetHeight - 8 + 'px';

            this._tooltip = tooltip;
        }

        function hideTooltip(e) {
            const title = this.getAttribute('data-title');
            if (title) {
                this.setAttribute('title', title);
                this.removeAttribute('data-title');
            }

            if (this._tooltip) {
                this._tooltip.remove();
                delete this._tooltip;
            }
        }

        // Initialize tooltips when DOM is ready
        document.addEventListener('DOMContentLoaded', initTooltips);
    </script>
