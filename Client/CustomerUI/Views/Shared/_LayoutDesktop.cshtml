            transform: translateY(-1px);
        }
        .nav-link { position: relative; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); border-radius: 16px; overflow: hidden; }
        .nav-link:hover { color: #3b82f6; background: rgba(59, 130, 246, 0.08); transform: translateY(-2px); box-shadow: 0 6px 20px rgba(59, 130, 246, 0.15);}
