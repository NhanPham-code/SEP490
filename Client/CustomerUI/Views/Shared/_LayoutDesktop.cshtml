        .badge-container .notification-dot { position: absolute; top: -2px; right: -2px; z-index: 15;}
        .dropdown-solid { background: #ffffff !important; backdrop-filter: none !important; border: 1px solid #e2e8f0; box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);}
        @@media (max-width: 768px) {
            .header-glass { padding: 0 16px; }
            .nav-section { display: none; }
            .mobile-nav-toggle { display: block; }
        }
        .tooltip { position: absolute; z-index: 1000; padding: 8px 12px; background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(8px); color: white; font-size: 0.75rem; font-weight: 500; border-radius: 8px; white-space: nowrap; pointer-events: none; opacity: 0; transform: translateY(4px); transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);}
        .tooltip.show { opacity: 1; transform: translateY(0);}
        .notification-panel, .chat-panel, .search-suggestions {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(226, 232, 240, 0.8);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }
        .logo-container:hover .animate-float { animation-duration: 2s;}
        .search-suggestions { border: 1px solid rgba(226, 232, 240, 0.5); box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);}
