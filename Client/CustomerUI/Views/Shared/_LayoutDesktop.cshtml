        .nav-link:hover::before { width: 100%; }
        .action-btn { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); position: relative; overflow: visible; }
        .action-btn:hover { transform: translateY(-3px) scale(1.05); box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);}
        .action-btn:active { transform: translateY(-1px) scale(0.98);}
        .notification-badge { animation: pulse-slow 3s cubic-bezier(0.4, 0, 0.6, 1) infinite; z-index: 10; }
