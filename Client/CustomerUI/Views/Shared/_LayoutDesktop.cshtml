<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CustomerUI</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content="Book your favorite sports stadiums with ease and flexibility." />

    <!-- Styles -->
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
</head>
<script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              DEFAULT: '#3b82f6', // Màu xanh chính
              light: '#60a5fa',   // Biến thể sáng hơn
              dark: '#1d4ed8',    // Biến thể tối hơn
              muted: 'rgba(59, 130, 246, 0.5)', // Màu mờ cho các hiệu ứng nền
            },
            secondary: {
              DEFAULT: '#10b981', // Màu xanh lá chính
              light: '#34d399',   // Biến thể sáng hơn
              dark: '#047857',    // Biến thể tối hơn
              muted: 'rgba(16, 185, 129, 0.5)', // Màu mờ
            },
            neutral: {
              100: '#f9fafb',     // Màu sáng cho nền
              200: '#e5e7eb',     // Màu xám nhạt
              800: '#1f2937',     // Màu xám đậm cho chữ
              900: '#111827',     // Màu tối cho nền
            },
          },
          borderRadius: {
            none: '0px',
            sm: '4px',
            DEFAULT: '8px',  // Giá trị mặc định được giữ
            md: '12px',
            lg: '16px',
            xl: '20px',
            '2xl': '24px',
            '3xl': '32px',
            full: '9999px',
            button: '8px',   // Giữ nguyên cho nút
            card: '12px',    // Thêm bán kính cho thẻ
          },
          boxShadow: {
            'soft': '0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.05)', // Bóng nhẹ
            'card': '0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)', // Bóng cho thẻ
            'hover': '0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)', // Bóng khi hover
          },
          transitionProperty: {
            'height': 'height', // Hỗ trợ animation cho chiều cao
            'spacing': 'margin, padding', // Hỗ trợ animation cho margin/padding
          },
          transitionDuration: {
            '400': '400ms', // Thêm thời gian chuyển đổi mượt hơn
          },
          transitionTimingFunction: {
            'ease-in-out-smooth': 'cubic-bezier(0.4, 0, 0.2, 1)', // Hàm thời gian mượt
          },
        },
      },
    };
</script>
<style>
    /* Icon font consistency */
    :where([class^="ri-"])::before {
        content: "\f3c2";
        font-family: 'remixicon'; /* Đảm bảo sử dụng đúng font icon */
        font-style: normal;
        font-weight: normal;
        display: inline-block;
    }

    /* Hero background with enhanced gradient */
    .hero-bg {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(16, 185, 129, 0.15) 100% );
        backdrop-filter: blur(4px); /* Thêm hiệu ứng mờ nhẹ */
    }

    /* Mobile menu with smooth slide-in */
    .mobile-menu {
        transform: translateX(-100%);
        transition: transform 0.4s ease-in-out-smooth; /* Sử dụng timing function mượt hơn */
        background-color: theme('colors.neutral.900'); /* Nền tối cho menu */
        box-shadow: theme('boxShadow.soft'); /* Thêm bóng nhẹ */
    }

        .mobile-menu.open {
            transform: translateX(0);
        }

    /* Search bar animation */
    .search-expanded {
        width: 100%;
        opacity: 1;
        transition: width 0.4s ease-in-out-smooth, opacity 0.4s ease-in-out-smooth; /* Thêm hiệu ứng mượt */
        background-color: theme('colors.neutral.100'); /* Nền sáng */
        border-radius: theme('borderRadius.sm'); /* Bo góc nhẹ */
    }

    /* Filter sheet animation */
    .filter-sheet {
        transform: translateY(100%);
        transition: transform 0.4s ease-in-out-smooth; /* Tăng thời gian cho mượt mà */
        background-color: theme('colors.neutral.100'); /* Nền sáng */
        box-shadow: theme('boxShadow.card'); /* Bóng cho sheet */
    }

        .filter-sheet.open {
            transform: translateY(0);
        }

    /* Stadium card with hover effect */
    .stadium-card {
        transition: transform 0.3s ease-in-out-smooth, box-shadow 0.3s ease-in-out-smooth; /* Hiệu ứng mượt hơn */
        border-radius: theme('borderRadius.card'); /* Sử dụng bán kính card */
        background-color: theme('colors.neutral.100'); /* Nền sáng cho thẻ */
        box-shadow: theme('boxShadow.card'); /* Bóng mặc định */
    }

        .stadium-card:hover {
            transform: translateY(-4px); /* Tăng độ nâng khi hover */
            box-shadow: theme('boxShadow.hover'); /* Bóng mạnh hơn khi hover */
        }

    /* Smooth global transitions */
    *, *::before, *::after {
        transition: color 0.2s ease-in-out, background-color 0.2s ease-in-out; /* Hiệu ứng mượt cho màu */
    }
</style>
<body class="bg-white text-gray-900">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a asp-controller="Home" asp-action="Index">
                        <h1 class="font-['Pacifico'] custom-logo text-primary">logo</h1>
                    </a>
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex space-x-8">
                    <a href="#" class="text-gray-700 hover:text-primary transition-colors">Home</a>
                    <a asp-controller="FindTeam" asp-action="SearchStadium" class="text-gray-700 hover:text-primary transition-colors">Find Stadiums</a>
                    <a asp-controller="FindTeam" asp-action="FindTeam" class="text-gray-700 hover:text-primary transition-colors">Tìm Nhóm Chơi</a>
                    <a href="#" class="text-gray-700 hover:text-primary transition-colors">Sports</a>
                    <a href="#" class="text-gray-700 hover:text-primary transition-colors">About</a>
                    <a href="#" class="text-gray-700 hover:text-primary transition-colors">Contact</a>
                </nav>

                <!-- Desktop Sign In Button -->
                <div class="hidden md:flex items-center space-x-4">


                    <div class="relative">
                        <input type="text" placeholder="Search stadiums..." class="w-64 px-4 py-2 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                        <button class="absolute left-3 top-2.5 w-5 h-5 flex items-center justify-center">
                            <i class="ri-search-line text-gray-400"></i>
                        </button>
                    </div>
                    
                    @if (Context.Session.GetString("FullName") != null)
                    {
                        <a asp-controller="" class="p-2 bg-gradient">
                            <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-blue-100">
                                <i class="ri-mail-fill text-blue-600 text-2xl"></i>
                            </div>

                        </a>
                        <div class="relative">
                            <!-- Avatar -->
                            <img id="avatar-btn" src="@Context.Session.GetString("AvatarUrl")"
                                 alt="Avatar"
                                 class="w-10 h-10 rounded-full border cursor-pointer" />

                            <!-- Dropdown Menu -->
                            <div id="dropdown-menu"
                                 class="absolute right-0 mt-1 w-48 bg-white border rounded-lg shadow-lg hidden">
                                <span class="block px-4 py-2 text-gray-700 font-semibold">
                                    @Context.Session.GetString("FullName")
                                </span>
                                <hr />
                                <a href="/profile" class="block px-4 py-2 hover:bg-gray-100">Profile</a>
                                <a asp-controller="Common" asp-action="Logout" class="block px-4 py-2 hover:bg-gray-100">Logout</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        
                        <a asp-controller="Common" asp-action="Login">
                            <button class="bg-primary text-white px-6 py-2 rounded-button hover:bg-blue-600 transition-colors whitespace-nowrap">
                                Sign In
                            </button>
                        </a>
                    }
                </div>


                <!-- Mobile Hamburger Button -->
                <button id="menu-toggle" class="md:hidden text-gray-700 text-2xl focus:outline-none">
                    <i class="ri-menu-line"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Mobile Dropdown Menu -->
    <nav id="mobile-menu" class="md:hidden hidden bg-white shadow-sm px-4 py-3 space-y-3">
        <a href="#" class="block text-gray-700 hover:text-primary transition-colors">Home</a>
        <a asp-controller="Home" asp-action="SearchStadium" class="block text-gray-700 hover:text-primary transition-colors">Find Stadiums</a>
        <a href="#" class="block text-gray-700 hover:text-primary transition-colors">Sports</a>
        <a href="#" class="block text-gray-700 hover:text-primary transition-colors">About</a>
        <a href="#" class="block text-gray-700 hover:text-primary transition-colors">Contact</a>
        
        @if (Context.Session.GetString("FullName") != null)
        {
            <a asp-controller="" class="p-2 bg-gradient">
                <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-blue-100">
                    <i class="ri-mail-fill text-blue-600 text-2xl"></i>
                </div>

            </a>
            <div class="flex items-center space-x-3">
                <img src="@Context.Session.GetString("AvatarUrl")"
                     alt="Avatar"
                     class="w-10 h-10 rounded-full border" />
                <span class="text-gray-700 font-semibold">@Context.Session.GetString("FullName")</span>
            </div>
            <a asp-controller="Profile" asp-action="Index" class="block text-gray-700 hover:text-primary transition-colors">Profile</a>
            <a asp-controller="Common" asp-action="Logout" class="block text-gray-700 hover:text-primary transition-colors">Logout</a>
        }
        else
        {
            
            <a asp-controller="Common" asp-action="Login">
                <button class="w-full bg-primary text-white px-6 py-2 rounded-button hover:bg-blue-600 transition-colors">Sign In</button>
            </a>
        }
    </nav>
    <!-- Main content -->
    <main >
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12 mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Logo & social -->
                <div>
                    <h3 class="font-['Pacifico'] text-2xl text-primary mb-4">logo</h3>
                    <p class="text-gray-400 mb-4">Your premier destination for booking sports stadiums and facilities across the city.</p>
                    <div class="flex space-x-4">
                        <button class="w-10 h-10 bg-gray-800 rounded-lg hover:bg-gray-700"><i class="ri-facebook-fill"></i></button>
                        <button class="w-10 h-10 bg-gray-800 rounded-lg hover:bg-gray-700"><i class="ri-twitter-fill"></i></button>
                        <button class="w-10 h-10 bg-gray-800 rounded-lg hover:bg-gray-700"><i class="ri-instagram-fill"></i></button>
                    </div>
                </div>

                <!-- Quick links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a asp-controller="Stadiums" asp-action="Index" class="text-gray-400 hover:text-white">Find Stadiums</a></li>
                        <li><a asp-controller="Sports" asp-action="Index" class="text-gray-400 hover:text-white">Sports Categories</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Pricing</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="text-gray-400 hover:text-white">About Us</a></li>
                    </ul>
                </div>

                <!-- Support -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Support</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white">Help Center</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-gray-400 hover:text-white">Contact Us</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Booking Policy</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Terms of Service</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Newsletter</h4>
                    <p class="text-gray-400 mb-4">Subscribe to get updates on new stadiums and special offers.</p>
                    <div class="flex gap-2">
                        <input type="email" placeholder="Your email" class="flex-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white">
                        <button class="bg-primary text-white px-4 py-2 rounded-button hover:bg-blue-600">Subscribe</button>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-800 mt-8 pt-8 text-center">
                <p class="text-gray-400">&copy; 2025 Stadium Booking Platform. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <!-- Mobile menu toggle script -->
    <script>
        const toggleBtn = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');

        toggleBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Avatar dropdown toggle
        const avatarBtn = document.getElementById('avatar-btn');
        const dropdownMenu = document.getElementById('dropdown-menu');

        if (avatarBtn && dropdownMenu) {
            avatarBtn.addEventListener('click', function (e) {
                e.stopPropagation();
                dropdownMenu.classList.toggle('hidden');
            });

            document.addEventListener('click', function (e) {
                if (!dropdownMenu.contains(e.target) && !avatarBtn.contains(e.target)) {
                    dropdownMenu.classList.add('hidden');
                }
            });
        }
    </script>


</body>
</html>
