<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerUI.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <!-- Custom Media Query CSS -->
    <style>

    </style>
</head>

<body>
    <header class="mobile-nav bg-white shadow-sm sticky top-0 z-50">
        <div class="flex justify-between items-center h-16 px-4">
            <button id="mobile-menu-btn" class="w-10 h-10 flex items-center justify-center">
                <i class="ri-menu-line text-xl"></i>
            </button>
            <a asp-controller="Home" asp-action="Index">
                <h1 class="font-['Pacifico'] custom-logo text-primary">logo</h1>
            </a>
            
            <div class="flex items-center space-x-2">
                <button id="mobile-search-btn" class="w-10 h-10 flex items-center justify-center">
                    <i class="ri-search-line text-xl"></i>
                </button>
                <a asp-controller="Login" asp-action="Login" class="w-10 h-10 flex items-center justify-center">
                    <i class="ri-user-line text-xl"></i>
                </a>
            </div>
        </div>
        <div id="mobile-search" class="hidden px-4 pb-4">
            <div class="relative">
                <input type="text" placeholder="Search stadiums..." class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                <div class="absolute left-4 top-3.5 w-5 h-5 flex items-center justify-center">
                    <i class="ri-search-line text-gray-400"></i>
                </div>
            </div>
        </div>
        <!-- Mobile Menu Overlay -->
        <div id="mobile-menu-overlay" class="mobile-nav fixed inset-0 bg-black bg-opacity-50 z-40 hidden">
            <div id="mobile-menu" class="mobile-menu fixed left-0 top-0 h-full w-80 bg-white z-50">
                <div class="p-6">
                    <div class="flex justify-between items-center mb-8">
                        <h2 class="font-['Pacifico'] text-xl text-primary">logo</h2>
                        <button id="close-mobile-menu" class="w-8 h-8 flex items-center justify-center">
                            <i class="ri-close-line text-xl"></i>
                        </button>
                    </div>
                    <nav class="space-y-6">
                        <a href="#" class="block text-lg text-gray-700 hover:text-primary transition-colors">Home</a>
                        <a href="#" class="block text-lg text-gray-700 hover:text-primary transition-colors">Find Stadiums</a>
                        <a href="#" class="block text-lg text-gray-700 hover:text-primary transition-colors">Sports</a>
                        <a href="#" class="block text-lg text-gray-700 hover:text-primary transition-colors">My Bookings</a>
                        <a href="#" class="block text-lg text-gray-700 hover:text-primary transition-colors">Profile</a>
                        <a href="#" class="block text-lg text-gray-700 hover:text-primary transition-colors">About</a>
                        <a href="#" class="block text-lg text-gray-700 hover:text-primary transition-colors">Contact</a>
                    </nav>
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <a href="https://readdy.ai/home/6e478e59-67a3-479d-b717-11cb821df867/1e671e07-9379-42a1-892f-d1ea2862e449" data-readdy="true">
                            <button class="w-full bg-primary text-white py-3 rounded-button !rounded-button hover:bg-blue-600 transition-colors whitespace-nowrap">Sign In</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Mobile Bottom Navigation -->
        <nav class="mobile-nav fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 z-40">
            <div class="flex justify-around py-2">
                <button class="flex flex-col items-center py-2 px-4 text-primary">
                    <div class="w-6 h-6 flex items-center justify-center">
                        <i class="ri-home-line text-xl"></i>
                    </div>
                    <span class="text-xs mt-1">Home</span>
                </button>
                <button class="flex flex-col items-center py-2 px-4 text-gray-400">
                    <div class="w-6 h-6 flex items-center justify-center">
                        <i class="ri-search-line text-xl"></i>
                    </div>
                    <span class="text-xs mt-1">Search</span>
                </button>
                <button class="flex flex-col items-center py-2 px-4 text-gray-400">
                    <div class="w-6 h-6 flex items-center justify-center">
                        <i class="ri-calendar-line text-xl"></i>
                    </div>
                    <span class="text-xs mt-1">Bookings</span>
                </button>
                <button class="flex flex-col items-center py-2 px-4 text-gray-400">
                    <div class="w-6 h-6 flex items-center justify-center">
                        <i class="ri-user-line text-xl"></i>
                    </div>
                    <span class="text-xs mt-1">Profile</span>
                </button>
            </div>
        </nav>
    </header>

    <div role="main" class="pb-12 max-w-7xl mx-auto px-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12 mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Logo & social -->
                <div>
                    <h3 class="font-['Pacifico'] text-2xl text-primary mb-4">logo</h3>
                    <p class="text-gray-400 mb-4">Your premier destination for booking sports stadiums and facilities across the city.</p>
                    <div class="flex space-x-4">
                        <button class="w-10 h-10 bg-gray-800 rounded-lg hover:bg-gray-700"><i class="ri-facebook-fill"></i></button>
                        <button class="w-10 h-10 bg-gray-800 rounded-lg hover:bg-gray-700"><i class="ri-twitter-fill"></i></button>
                        <button class="w-10 h-10 bg-gray-800 rounded-lg hover:bg-gray-700"><i class="ri-instagram-fill"></i></button>
                    </div>
                </div>

                <!-- Quick links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a asp-controller="Stadiums" asp-action="Index" class="text-gray-400 hover:text-white">Find Stadiums</a></li>
                        <li><a asp-controller="Sports" asp-action="Index" class="text-gray-400 hover:text-white">Sports Categories</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Pricing</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="text-gray-400 hover:text-white">About Us</a></li>
                    </ul>
                </div>

                <!-- Support -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Support</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white">Help Center</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-gray-400 hover:text-white">Contact Us</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Booking Policy</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Terms of Service</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Newsletter</h4>
                    <p class="text-gray-400 mb-4">Subscribe to get updates on new stadiums and special offers.</p>
                    <div class="flex gap-2">
                        <input type="email" placeholder="Your email" class="flex-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white">
                        <button class="bg-primary text-white px-4 py-2 rounded-button hover:bg-blue-600">Subscribe</button>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-800 mt-8 pt-8 text-center">
                <p class="text-gray-400">&copy; 2025 Stadium Booking Platform. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
