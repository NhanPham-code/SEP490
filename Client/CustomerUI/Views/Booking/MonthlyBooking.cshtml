        // Xử lý khi chọn thời gian
        function handleTimeSelect(hour) {
            if (startTime === null || (startTime !== null && endTime !== null)) {
                startTime = hour;
                endTime = null;
            } else if (hour > startTime) {
                endTime = hour;
                // Khi đã chọn đủ start và end, gọi hàm fetch
