@model List<DTOs.BookingDTO.BookingReadDto>

@{
    ViewData["Title"] = "Lịch sử Booking";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="flex flex-col items-center justify-center mb-10">
        <h2 class="text-4xl font-bold text-gray-800">Lịch sử Booking</h2>
        <p class="mt-2 text-lg text-gray-500">Xem lại các lịch đặt đã hoàn thành của bạn</p>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="bg-white rounded-2xl shadow-lg p-10 text-center text-gray-500">
            <p class="text-xl font-medium">Bạn chưa có lịch booking nào.</p>
            <p class="mt-2 text-gray-400">Hãy bắt đầu đặt lịch ngay để trải nghiệm dịch vụ của chúng tôi!</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto rounded-xl shadow-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Trạng thái
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Ngày
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Thời gian
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Tổng tiền
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Ghi chú
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var booking in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap">
                                @{
                                    var statusClass = "";
                                    var statusText = "";
                                    switch (booking.Status)
                                    {
                                        case "Confirmed":
                                            statusClass = "bg-green-100 text-green-700 border-green-200";
                                            statusText = "Đã xác nhận";
                                            break;
                                        case "Pending":
                                            statusClass = "bg-yellow-100 text-yellow-700 border-yellow-200";
                                            statusText = "Đang chờ";
                                            break;
                                        case "Cancelled":
                                            statusClass = "bg-red-100 text-red-700 border-red-200";
                                            statusText = "Đã hủy";
                                            break;
                                        default:
                                            statusClass = "bg-gray-100 text-gray-700 border-gray-200";
                                            statusText = "Không xác định";
                                            break;
                                    }
                                }
                                <span class="px-3 py-1 text-xs font-semibold rounded-full border @statusClass">
                                    @statusText
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @booking.Date.ToString("dd/MM/yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @booking.StartTime - @booking.EndTime
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
                                <span class="text-xl text-blue-600">@booking.TotalPrice</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @if (!string.IsNullOrEmpty(booking.Note))
                                {
                                    @booking.Note
                                }
                                else
                                {
                                    <span class="text-gray-400 italic">Không có</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>