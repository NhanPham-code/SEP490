        margin: 0 10px;
        font-weight: 600;
        color: #334155;
    }
    /* Loading overlay */
    .loading-overlay {
        opacity: 0.5;
        pointer-events: none;
        transition: opacity 0.2s;
    }
</style>

<body class="bh-body">
    <div class="bh-container">
        <div class="bh-header">
            <h1>Lịch sử đặt sân</h1>
            <p>Xem lại tất cả các lịch đặt sân @userFullName.</p>
        </div>

        @if (!Model.DailyBookings.Any() && !Model.MonthlyBookings.Any())
        {
            <div class="bh-empty-state">
                <div class="icon"><i class="fa-regular fa-calendar-xmark"></i></div>
                <h3>Bạn chưa có lịch đặt nào</h3>
                <p>Hãy bắt đầu trải nghiệm bằng cách đặt sân ngay hôm nay!</p>
                <a href="@Url.Action("Index", "Home")" class="bh-btn bh-btn-primary">
                    <i class="fa-solid fa-plus"></i> Đặt sân ngay
                </a>
            </div>
        }
        else
        {
            <div class="bh-filters">
                <div class="bh-filter-group">
                    <label for="bh-stadiumFilter"><i class="fa-solid fa-futbol"></i></label>
                    <select id="bh-stadiumFilter" onchange="loadBookings(1)">
                        <option value="0">Tất cả sân vận động</option>
                        @foreach (var stadium in stadiums)
                        {
                            <option value="@stadium.Id">@stadium.Name</option>
                        }
                    </select>
                </div>
                <div class="bh-filter-group">
                    <label for="bh-bookingTypeFilter"><i class="fa-solid fa-layer-group"></i></label>
                    <select id="bh-bookingTypeFilter">
                        <option value="all">Tất cả loại lịch</option>
                        <option value="daily">Lịch hằng ngày</option>
                        <option value="monthly">Lịch hằng tháng</option>
                    </select>
                </div>
                <div class="bh-filter-group">
                    <label for="bh-statusFilter"><i class="fa-solid fa-flag"></i></label>
                    <select id="bh-statusFilter" onchange="loadBookings(1)">
                        <option value="all">Tất cả trạng thái</option>
                        <option value="waiting">Chờ thanh toán</option>
                        <option value="accepted">Đã nhận / Sắp tới</option>
                        <option value="completed">Đã hoàn thành</option>
                        <option value="cancelled-group">Đã hủy / Lỗi</option>
                    </select>
                </div>
            </div>

            <!-- === SECTION DAILY BOOKING (Dùng Partial View & AJAX) === -->
            <div class="bh-section" id="bh-daily-booking-section">
                <h2 class="bh-section-title">Lịch Đặt Theo Ngày</h2>
                <div class="bh-table-wrapper" id="dailyBookingContainer">
                    @{
                        await Html.RenderPartialAsync("_DailyBookingTable", Model);
                    }
                </div>
            </div>

            <!-- === SECTION MONTHLY BOOKING (Tĩnh) === -->
            <div class="bh-section" id="bh-monthly-booking-section">
                <h2 class="bh-section-title">Lịch Đặt Theo Tháng</h2>
                <div class="bh-table-wrapper">
                    <div class="bh-table-scroll">
                        <table class="bh-table">
                            <thead><tr><th style="width: 50px;"></th><th>Sân / Gói</th><th>Khung giờ</th><th>Giá tiền</th><th>Trạng thái</th><th style="text-align: right;">Hành động</th></tr></thead>
                            <tbody>
                                @foreach (var monthlyVm in sortedMonthlyBookings)
                                {
                                    var booking = monthlyVm.MonthlyBooking;
                                    var stadium = stadiums.FirstOrDefault(s => s.Id == booking.StadiumId);

                                    <tr class="bh-parent-row" data-stadium-id="@booking.StadiumId" data-booking-type="monthly" data-monthly-id="@booking.Id" data-status="@booking.Status.ToLower()">
                                        <td style="text-align: center;"><i class="fa-solid fa-chevron-down expand-toggle"></i></td>
                                        <td data-label="Sân / Gói">
                                            <div class="bh-table-info">
                                                <div class="icon"><i class="fa-solid fa-calendar-days"></i></div>
                                                <div class="details"><span class="name">@stadium?.Name</span><span class="sub">Gói tháng @booking.Month/@booking.Year</span></div>
                                            </div>
                                        </td>
                                        <td data-label="Khung giờ">@FormatTime(booking.StartTime) - @FormatTime(booking.EndTime)</td>
                                        <td data-label="Giá tiền"><span class="price">@FormatCurrency(booking.TotalPrice)</span></td>
                                        <td data-label="Trạng thái"><span class="status-badge @GetStatusClass(booking.Status)">@TranslateStatus(booking.Status)</span></td>
                                        <td data-label="Hành động">
                                            <div class="bh-actions" style="justify-content: flex-end;">
                                                <button class="bh-btn-icon details" title="Xem chi tiết" data-booking-id="@booking.Id" data-booking-type="monthly"><i class="fa-solid fa-eye"></i></button>

                                                @if (booking.Status.Equals("waiting", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <a href="@Url.Action("RetryPayment", "Booking", new { id = booking.Id, type = "Monthly" })"
                                                       class="bh-btn-icon pay"
                                                       title="Thanh toán ngay">
                                                        <i class="fa-solid fa-credit-card"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="bh-child-row" data-parent-monthly-id="@booking.Id">
                                        <td colspan="6">
                                            <div class="bh-child-container">
                                                <h4><i class="fa-solid fa-list-check"></i> Các Lịch Đặt Chi Tiết</h4>
                                                @if (monthlyVm.Bookings.Any())
                                                {
                                                    <table class="bh-child-table">
                                                        <thead>
                                                            <tr>
                                                                <th>Ngày chơi</th>
                                                                <th>Sân con</th>
                                                                <th>Trạng thái</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var childBooking in monthlyVm.Bookings.OrderBy(b => b.Date))
                                                            {
                                                                <tr>
                                                                    <td>@childBooking.Date.ToString("dd/MM/yyyy")</td>
                                                                    <td>@string.Join(", ", childBooking.BookingDetails.Select(d => d.CourtName))</td>
                                                                    <td><span class="status-badge @GetStatusClass(childBooking.Status)">@TranslateStatus(childBooking.Status)</span></td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                                else
                                                {
                                                    <p>Không có lịch đặt chi tiết nào cho gói này.</p>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- MODAL -->
    <div class="bh-modal-backdrop" id="bh-modal">
        <div class="bh-modal">
            <div class="bh-modal-header">
                <h3 id="bh-modal-title">Chi tiết lịch đặt</h3>
                <button class="bh-modal-close" title="Đóng">&times;</button>
            </div>
            <div class="bh-modal-body" id="bh-modal-body">
                <!-- Content injected via JS -->
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Dữ liệu ban đầu (Server render)
        const initialViewModel = @Html.Raw(JsonSerializer.Serialize(Model, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));
        const stadiums = @Html.Raw(JsonSerializer.Serialize(stadiums, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));
        let dailyBookingsCache = initialViewModel.dailyBookings; // Cache để modal dùng

        document.addEventListener('DOMContentLoaded', function () {
            const container = document.querySelector('.bh-container');
            if (!container) return;

            const modalEl = document.getElementById('bh-modal');
            const dailyContainer = document.getElementById('dailyBookingContainer');

            // --- 1. AJAX LOAD BOOKINGS ---
            window.loadBookings = function(page) {
                const stadiumId = document.getElementById('bh-stadiumFilter').value;
                const status = document.getElementById('bh-statusFilter').value;

                // Client-side filter cho Monthly (Vì monthly load hết 1 lần)
                filterMonthlyTable(stadiumId, status);

                // Server-side filter cho Daily
                dailyContainer.style.opacity = '0.5';
                fetch(`/Booking/FilterDailyBookings?page=${page}&status=${status}&stadiumId=${stadiumId}`)
                    .then(response => {
                        if (!response.ok) throw new Error('Network error');
                        return response.text();
                    })
                    .then(html => {
                        dailyContainer.innerHTML = html;
                        dailyContainer.style.opacity = '1';
                        // Lưu ý: Sau khi load lại, dailyBookingsCache cũ sẽ không khớp với UI mới.
                        // Nếu muốn Modal hoạt động chuẩn với trang mới, cần cập nhật cache hoặc gọi API detail.
                        // Ở đây ta chấp nhận hạn chế: Modal Daily ở các trang sau (AJAX)
                        // sẽ cần gọi API chi tiết nếu không tìm thấy trong cache cũ.
                    })
                    .catch(error => {
                        console.error(error);
                        dailyContainer.style.opacity = '1';
                        Swal.fire('Lỗi', 'Không thể tải dữ liệu', 'error');
                    });
            };

            // --- 2. CLIENT-SIDE FILTER (MONTHLY) ---
            function filterMonthlyTable(stadiumId, status) {
                const rows = document.querySelectorAll('#bh-monthly-booking-section tbody tr.bh-parent-row');
                const cancelled = ['cancelled', 'payfail', 'denied'];

                rows.forEach(row => {
                    const rowStadium = row.dataset.stadiumId;
                    const rowStatus = row.dataset.status;

                    const matchStadium = stadiumId == 0 || rowStadium == stadiumId;
                    const matchStatus = status == 'all' ||
                                        (status == 'cancelled-group' && cancelled.includes(rowStatus)) ||
                                        rowStatus == status;

                    row.style.display = (matchStadium && matchStatus) ? '' : 'none';

                    // Ẩn child row nếu parent ẩn
                    if(row.style.display == 'none') {
                        const child = document.querySelector(`.bh-child-row[data-parent-monthly-id="${row.dataset.monthlyId}"]`);
                        if(child) child.style.display = 'none';
                    }
                });
            }

            // --- 3. UI HELPERS ---
            document.getElementById('bh-bookingTypeFilter').addEventListener('change', function() {
                const type = this.value;
                document.getElementById('bh-daily-booking-section').style.display = (type === 'all' || type === 'daily') ? 'block' : 'none';
                document.getElementById('bh-monthly-booking-section').style.display = (type === 'all' || type === 'monthly') ? 'block' : 'none';
            });

            // --- 4. EVENT DELEGATION (Click Handler) ---
            container.addEventListener('click', e => {
                const target = e.target;

                // Expand/Collapse Child Rows
                if(target.closest('.expand-toggle')) {
                    const parentRow = target.closest('.bh-parent-row');
                    parentRow.classList.toggle('expanded');
                    const childRow = container.querySelector(`.bh-child-row[data-parent-monthly-id="${parentRow.dataset.monthlyId}"]`);
                    if(childRow) childRow.style.display = parentRow.classList.contains('expanded') ? 'table-row' : 'none';
                    return;
                }

                // Buttons
                const btn = target.closest('.bh-btn-icon');
                if(!btn) return;

                if(btn.classList.contains('details')) {
                    const id = btn.dataset.bookingId;
                    const type = btn.dataset.bookingType;

                    if (type === 'monthly') {
                        const item = initialViewModel.monthlyBookings.find(m => m.monthlyBooking.id == id);
                        if(item) populateModal(item, 'monthly');
                    }
                    else {
                        // Với Daily, ưu tiên tìm trong cache đầu tiên
                        let item = dailyBookingsCache.find(d => d.booking.id == id);
                        if(item) {
                            populateModal(item, 'daily');
                        } else {
                            // Nếu không có (do đã sang trang khác), gọi API lấy chi tiết
                            fetch(`/Booking/GetBookingDetailJson/${id}`) // Cần thêm Action này trả về JSON
                                .then(r => r.json())
                                .then(data => populateModal(data, 'daily'))
                                .catch(() => Swal.fire('Thông tin', 'Không tìm thấy chi tiết trong cache. Vui lòng reload trang.', 'info'));
                        }
                    }
                }
                else if(btn.classList.contains('cancel')) {
                    Swal.fire({
                        title: 'Xác nhận hủy?', text: "Không thể hoàn tác!", icon: 'warning',
                        showCancelButton: true, confirmButtonColor: '#d33', confirmButtonText: 'Hủy lịch'
                    }).then(result => {
                        if (result.isConfirmed) {
                             fetch(`/Booking/CancelBooking/${btn.dataset.bookingId}`, { method: 'POST' })
                            .then(res => res.json()).then(data => {
                                if (data.success) {
                                    Swal.fire('Thành công', 'Đã hủy lịch.', 'success');
                                    loadBookings(1); // Reload bảng Daily
                                } else { throw new Error(data.message); }
                            }).catch(err => Swal.fire('Lỗi', err.message, 'error'));
                        }
                    });
                }
            });

            // --- 5. MODAL POPULATE ---
            const openModal = () => modalEl.style.display = 'flex';
            const closeModal = () => modalEl.style.display = 'none';
            modalEl.addEventListener('click', (e) => { if (e.target === modalEl || e.target.closest('.bh-modal-close')) closeModal(); });

            function populateModal(vm, type) {
                // Logic populate modal giữ nguyên code cũ của bạn
                // Lưu ý: vm ở đây phải khớp cấu trúc DailyBookingWithUserViewModel hoặc MonthlyBookingWithDetailsViewModel
                const booking = (type === 'monthly') ? vm.monthlyBooking : vm.booking;
                const details = (type === 'monthly') ? vm.bookings : booking.bookingDetails; // List con
                const discount = vm.discount;
                const stadium = stadiums.find(s => s.id === booking.stadiumId);
                const modalBody = document.getElementById('bh-modal-body');

                document.getElementById('bh-modal-title').textContent = `Chi tiết #${booking.id}`;

                // Helper format currency/status
                const fmtMoney = (v) => new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(v);

                let html = `
                    <div class="bh-modal-section">
                        <h4>Thông tin chung</h4>
                        <div class="bh-modal-grid">
                            <div class="bh-modal-item"><span class="label">Sân</span><span class="value">${stadium?.name || 'N/A'}</span></div>
                            <div class="bh-modal-item"><span class="label">Ngày tạo</span><span class="value">${new Date(booking.createdAt).toLocaleDateString('vi-VN')}</span></div>
                            <div class="bh-modal-item"><span class="label">Trạng thái</span><span class="value">${booking.status}</span></div>
                        </div>
                    </div>`;

                // Render List Con
                html += `<div class="bh-modal-section"><h4 style="margin-top:10px;">Chi tiết đặt sân</h4><div class="bh-modal-list">`;

                if(type === 'monthly') {
                    // List các booking con của tháng
                    if(details && details.length > 0) {
                        details.forEach(b => {
                            html += `<div class="bh-modal-list-item"><span>${new Date(b.date).toLocaleDateString('vi-VN')}</span><span>${b.status}</span></div>`;
                        });
                    } else { html += `<p>Chưa có lịch con.</p>`; }
                } else {
                    // List các booking detail (slots) của ngày
                    if(details && details.length > 0) {
                        details.forEach(d => {
                            html += `<div class="bh-modal-list-item"><span>${d.courtName}</span><span>${d.startTime.substring(11,16)} - ${d.endTime.substring(11,16)}</span></div>`;
                        });
                    }
                }
                html += `</div></div>`;

                // Pricing
                html += `<div class="bh-modal-pricing">
                            <div class="total"><span class="label">Tổng cộng</span><span class="value">${fmtMoney(booking.totalPrice)}</span></div>
                         </div>`;

                modalBody.innerHTML = html;
                openModal();
            }
        });
    </script>
}