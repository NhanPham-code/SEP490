
@model List<DTOs.BookingDTO.BookingReadDto>

@{
    ViewData["Title"] = "Lịch sử Booking";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 bg-gray-50">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Lịch sử Booking</h2>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="bg-white rounded-lg shadow-sm p-6 text-center text-gray-500">
            <p>Không có lịch sử booking nào được tìm thấy.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var booking in Model)
            {
                <div class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-semibold text-gray-900">Booking ID: @booking.Id</h3>
                        @{
                            var statusClass = "";
                            switch (booking.Status)
                            {
                                case "Confirmed":
                                    statusClass = "bg-green-100 text-green-800";
                                    break;
                                case "Pending":
                                    statusClass = "bg-yellow-100 text-yellow-800";
                                    break;
                                case "Cancelled":
                                    statusClass = "bg-red-100 text-red-800";
                                    break;
                                default:
                                    statusClass = "bg-gray-100 text-gray-800";
                                    break;
                            }
                        }
                        <span class="px-3 py-1 text-xs font-medium rounded-full @statusClass">
                            @booking.Status
                        </span>
                    </div>

                    <ul class="space-y-3 text-sm text-gray-700">
                        <li class="flex items-center">
                            <i class="ri-calendar-line text-blue-500 mr-2"></i>
                            <strong>Ngày:</strong>
                            <span class="ml-auto">@booking.Date.ToString("dd/MM/yyyy")</span>
                        </li>
                        <li class="flex items-center">
                            <i class="ri-time-line text-blue-500 mr-2"></i>
                            <strong>Thời gian:</strong>
                            <span class="ml-auto">@booking.StartTime - @booking.EndTime</span>
                        </li>
                        @if (!string.IsNullOrEmpty(booking.Note))
                        {
                            <li class="flex items-center">
                                <i class="ri-file-text-line text-blue-500 mr-2"></i>
                                <strong>Ghi chú:</strong>
                                <span class="ml-auto">@booking.Note</span>
                            </li>
                        }
                    </ul>

                    <div class="mt-4 pt-4 border-t border-gray-200 flex items-center justify-between">
                        <strong class="text-lg text-gray-900">Tổng tiền:</strong>
                        <span class="text-xl font-bold text-blue-600">@booking.TotalPrice</span>
                    </div>
                </div>
            }
        </div>
    }
</div>