@model List<DTOs.BookingDTO.BookingReadDto>
@{
    ViewData["Title"] = "Lịch sử Booking";
}
@if (TempData["BookingSuccess"] != null && (bool)TempData["BookingSuccess"])
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Thành công!',
            text: '@Html.Raw(Json.Serialize(TempData["SuccessMessage"]))',
            showConfirmButton: false,
            timer: 2500
        });
    </script>
}

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col items-center justify-center mb-8">
        <h2 class="text-3xl font-bold text-gray-800">Danh sách booking</h2>
        <p class="mt-2 text-gray-500">Xem lại các lịch đặt của bạn</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="bg-white rounded-xl shadow-md p-8 text-center">
            <div class="mb-4">
                <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
            </div>
            <p class="text-xl font-medium text-gray-900">Bạn chưa có booking nào</p>
            <p class="mt-2 text-gray-500">Hãy đặt lịch ngay để trải nghiệm dịch vụ của chúng tôi!</p>
            <div class="mt-6">
                <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                    Đặt lịch ngay
                </a>
            </div>
        </div>
    }
    else
    {
        

        <!-- Mobile View (Hidden on desktop) -->
        <div class="block lg:hidden space-y-4">
            @{
                var stadiumNames = ViewBag.StadiumNames as Dictionary<int, string>;
                var discountInfo = ViewBag.DiscountInfo as Dictionary<int, string>;
            }
            @foreach (var booking in Model)
            {
                <div class="bg-white rounded-xl shadow-md p-4 border-l-4 @(booking.Status == "Confirmed" ? "border-green-500" : booking.Status == "Pending" ? "border-yellow-500" : "border-red-500")">
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <h3 class="font-semibold text-gray-900 text-sm">
                                @(stadiumNames != null && stadiumNames.ContainsKey(booking.StadiumId) ? stadiumNames[booking.StadiumId] : "Đang cập nhật...")
                            </h3>
                            <p class="text-xs text-gray-500">ID: #@booking.Id</p>
                        </div>
                        @{
                            var statusClass = "";
                            var statusText = "";
                            switch (booking.Status)
                            {
                                case "Confirmed":
                                    statusClass = "bg-green-100 text-green-700";
                                    statusText = "Xác nhận";
                                    break;
                                case "pending":
                                    statusClass = "bg-yellow-100 text-yellow-700";
                                    statusText = "Chờ duyệt";
                                    break;
                                case "Cancelled":
                                    statusClass = "bg-red-100 text-red-700";
                                    statusText = "Đã hủy";
                                    break;
                                default:
                                    statusClass = "bg-gray-100 text-gray-700";
                                    statusText = $"{booking.Status}";
                                    break;
                            }
                        }
                        <span class="px-2 py-1 text-xs font-medium rounded-full @statusClass">
                            @statusText
                        </span>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-2 text-sm mb-3">
                        <div>
                            <span class="text-gray-500">Ngày:</span>
                            <span class="font-medium">@booking.Date.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div>
                            <span class="text-gray-500">Giảm giá:</span>
                            <span class="font-medium text-green-600">@(discountInfo != null && discountInfo.ContainsKey(booking.Id) ? discountInfo[booking.Id] : "Không có")</span>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center">
                        <div>
                            <span class="text-lg font-bold text-blue-600">@booking.TotalPrice?.ToString("N0") VNĐ</span>
                        </div>
                        <a asp-action="BookingDetail" asp-route-id="@booking.Id" 
                           class="inline-flex items-center px-3 py-1 text-xs font-medium text-blue-600 bg-blue-50 rounded-full hover:bg-blue-100">
                            Chi tiết
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Desktop View (Hidden on mobile) -->
        <div class="hidden lg:block">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/4">
                                    Sân thể thao
                                </th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Trạng thái
                                </th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Ngày đặt
                                </th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Giảm giá
                                </th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Tổng tiền
                                </th>
                                <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/12">
                                    Hành động
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var booking in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-4 py-4">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10">
                                                <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                    <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                                    </svg>
                                                </div>
                                            </div>
                                            <div class="ml-3">
                                                <div class="text-sm font-medium text-gray-900 truncate max-w-xs">
                                                    @(stadiumNames != null && stadiumNames.ContainsKey(booking.StadiumId) ? stadiumNames[booking.StadiumId] : "Đang cập nhật...")
                                                </div>
                                                <div class="text-xs text-gray-500">ID: #@booking.Id</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-4">
                                        @{
                                            var statusClass = "";
                                            var statusText = "";
                                            switch (booking.Status)
                                            {
                                                case "Confirmed":
                                                    statusClass = "bg-green-100 text-green-700";
                                                    statusText = "Xác nhận";
                                                    break;
                                                case "pending":
                                                    statusClass = "bg-yellow-100 text-yellow-700";
                                                    statusText = "Chờ duyệt";
                                                    break;
                                                case "Cancelled":
                                                    statusClass = "bg-red-100 text-red-700";
                                                    statusText = "Đã hủy";
                                                    break;
                                                default:
                                                    statusClass = "bg-gray-100 text-gray-700";
                                                    statusText = $"{booking.Status}";
                                                    break;
                                            }
                                        }
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @statusClass">
                                            @statusText
                                        </span>
                                    </td>
                                    <td class="px-4 py-4 text-sm text-gray-700">
                                        <div class="font-medium">@booking.Date.ToString("dd/MM/yyyy")</div>
                                        <div class="text-xs text-gray-500">@booking.Date.DayOfWeek.ToString()</div>
                                    </td>
                                    <td class="px-4 py-4 text-sm">
                                        <span class="text-green-600 font-medium">
                                            @(discountInfo != null && discountInfo.ContainsKey(booking.Id) ? discountInfo[booking.Id] : "Không có")
                                        </span>
                                    </td>
                                    <td class="px-4 py-4 text-sm font-bold">
                                        <span class="text-blue-600 text-lg">@booking.TotalPrice?.ToString("N0")</span>
                                        <span class="text-gray-500 text-xs">VNĐ</span>
                                    </td>
                                    <td class="px-4 py-4 text-center">
                                        <a asp-action="BookingDetail" asp-route-id="@booking.Id" 
                                           class="inline-flex items-center p-2 text-blue-600 hover:bg-blue-50 rounded-full transition-colors duration-200"
                                           title="Xem chi tiết">
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination (if needed) -->
        @if (Model.Count > 10)
        {
            <div class="flex justify-center mt-6">
                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                    <a href="#" class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        Trước
                    </a>
                    <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600">
                        1
                    </a>
                    <a href="#" class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        Sau
                    </a>
                </nav>
            </div>
        }
    }
</div>

<style>
    .truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>