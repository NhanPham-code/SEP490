<body class="bh-body">
    <div class="bh-container">
        <div class="bh-header">
            <h1>Lịch sử đặt sân</h1>
            <p>Xem lại tất cả các lịch đặt sân @userFullName.</p>
        </div>

        @if (!Model.DailyBookings.Any() && !Model.MonthlyBookings.Any())
        {
            <div class="bh-empty-state">
                <div class="icon"><i class="fa-regular fa-calendar-xmark"></i></div>
                <h3>Bạn chưa có lịch đặt nào</h3>
                <p>Hãy bắt đầu trải nghiệm bằng cách đặt sân ngay hôm nay!</p>
                <a href="@Url.Action("Index", "Home")" class="bh-btn bh-btn-primary">
                    <i class="fa-solid fa-plus"></i> Đặt sân ngay
                </a>
            </div>
        }
        else
        {
            <div class="bh-filters">
                <div class="bh-filter-group">
                    <label for="bh-stadiumFilter"><i class="fa-solid fa-futbol"></i></label>
                    <select id="bh-stadiumFilter" onchange="reloadAllTables()">
                        <option value="0">Tất cả sân vận động</option>
                        @foreach (var stadium in stadiums)
                        {
                            <option value="@stadium.Id">@stadium.Name</option>
                        }
                    </select>
                </div>
                <div class="bh-filter-group">
                    <label for="bh-bookingTypeFilter"><i class="fa-solid fa-layer-group"></i></label>
                    <select id="bh-bookingTypeFilter">
                        <option value="all">Tất cả loại lịch</option>
                        <option value="daily">Lịch hằng ngày</option>
                        <option value="monthly">Lịch hằng tháng</option>
                    </select>
                </div>
                <div class="bh-filter-group">
                    <label for="bh-statusFilter"><i class="fa-solid fa-flag"></i></label>
                    <select id="bh-statusFilter" onchange="reloadAllTables()">
                        <option value="all">Tất cả trạng thái</option>
                        <option value="waiting">Chờ thanh toán</option>
                        <option value="accepted">Đã nhận / Sắp tới</option>
                        <option value="completed">Đã hoàn thành</option>
                        <option value="cancelled-group">Đã hủy / Lỗi</option>
                    </select>
                </div>
            </div>

            <!-- === SECTION DAILY BOOKING (Dùng Partial View & AJAX) === -->
            <div class="bh-section" id="bh-daily-booking-section">
                <h2 class="bh-section-title">Lịch Đặt Theo Ngày</h2>
                <div class="bh-table-wrapper" id="dailyBookingContainer">
                    @{
                        await Html.RenderPartialAsync("_DailyBookingTable", Model);
                    }
                </div>
            </div>

            <!-- === SECTION MONTHLY BOOKING (Tĩnh) === -->
            <div class="bh-section" id="bh-monthly-booking-section">
                <h2 class="bh-section-title">Lịch Đặt Theo Tháng</h2>
                <div class="bh-table-wrapper" id="monthlyBookingContainer">
                    @{
                        // Thay vì foreach trực tiếp, ta gọi Partial View
                        await Html.RenderPartialAsync("_MonthlyBookingTable", Model);
                    }
                </div>
            </div>
        }
    </div>

    <!-- MODAL -->
    <div class="bh-modal-backdrop" id="bh-modal">
        <div class="bh-modal">
            <div class="bh-modal-header">
                <h3 id="bh-modal-title">Chi tiết lịch đặt</h3>
                <button class="bh-modal-close" title="Đóng">&times;</button>
            </div>
            <div class="bh-modal-body" id="bh-modal-body">
                <!-- Content injected via JS -->
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // === 1. HÀM DỊCH STATUS (Chạy Client-side) ===
        function translateStatusJS(status) {
            if (!status) return '';
            switch (status.toLowerCase()) {
                case 'accepted': return 'Đã nhận';
                case 'completed': return 'Hoàn thành';
                case 'cancelled': return 'Đã hủy';
                case 'denied': return 'Đã hủy';
                case 'payfail': return 'Lỗi thanh toán';
                case 'waiting': return 'Chờ thanh toán';
                case 'pending': return 'Chờ xử lý';
                default: return status;
            }
        }

        // === 2. DỮ LIỆU KHỞI TẠO (Server render lần đầu) ===
        // Lưu ý: initialViewModel chứa dữ liệu của TRANG 1
        const initialViewModel = @Html.Raw(JsonSerializer.Serialize(Model, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));
        const stadiums = @Html.Raw(JsonSerializer.Serialize(stadiums, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));

        // Biến Cache quan trọng: Luôn lưu danh sách đang hiển thị trên màn hình hiện tại
        let dailyBookingsCache = initialViewModel.dailyBookings;
        let monthlyBookingsCache = initialViewModel.monthlyBookings;

        document.addEventListener('DOMContentLoaded', function () {
            const container = document.querySelector('.bh-container');
            if (!container) return;

            const modalEl = document.getElementById('bh-modal');
            const dailyContainer = document.getElementById('dailyBookingContainer');

            // --- 3. AJAX LOAD DAILY BOOKINGS ---
            window.loadBookings = function(page) {
                const stadiumId = document.getElementById('bh-stadiumFilter').value;
                const status = document.getElementById('bh-statusFilter').value;

                dailyContainer.style.opacity = '0.5';

                fetch(`/Booking/FilterDailyBookings?page=${page}&status=${status}&stadiumId=${stadiumId}`)
                    .then(response => {
                        if (!response.ok) throw new Error('Network error');
                        return response.text();
                    })
                    .then(html => {
                        dailyContainer.innerHTML = html;
                        dailyContainer.style.opacity = '1';

                        // CẬP NHẬT CACHE DAILY TỪ TEXTAREA ẨN
                        const jsonElement = document.getElementById('temp-daily-data-json');
                        if (jsonElement && jsonElement.value) {
                            try {
                                dailyBookingsCache = JSON.parse(jsonElement.value);
                                console.log("Đã cập nhật cache Daily cho trang " + page);
                            } catch (e) {
                                console.error("Lỗi parse JSON Daily:", e);
                            }
                        }
                    })
                    .catch(error => {
                        console.error(error);
                        dailyContainer.style.opacity = '1';
                        Swal.fire('Lỗi', 'Không thể tải dữ liệu ngày', 'error');
                    });
            };

            // --- 4. AJAX LOAD MONTHLY BOOKINGS ---
            window.loadMonthlyBookings = function(page) {
                const stadiumId = document.getElementById('bh-stadiumFilter').value;
                const status = document.getElementById('bh-statusFilter').value;
                const container = document.getElementById('bh-monthly-booking-section').querySelector('.bh-table-wrapper');

                if(container) container.style.opacity = '0.5';

                fetch(`/Booking/FilterMonthlyBookings?page=${page}&status=${status}&stadiumId=${stadiumId}`)
                    .then(r => {
                        if (!r.ok) throw new Error('Err');
                        return r.text();
                    })
                    .then(html => {
                        if(container) {
                            container.innerHTML = html;
                            container.style.opacity = '1';

                            // CẬP NHẬT CACHE MONTHLY TỪ TEXTAREA ẨN
                            const jsonElement = document.getElementById('temp-monthly-data-json');
                            if (jsonElement && jsonElement.value) {
                                try {
                                    monthlyBookingsCache = JSON.parse(jsonElement.value);
                                    console.log("Đã cập nhật cache Monthly cho trang " + page);
                                } catch(e) {
                                    console.error("Lỗi parse JSON Monthly:", e);
                                }
                            }
                        }
                    })
                    .catch(e => {
                        console.error(e);
                        if(container) container.style.opacity = '1';
                        Swal.fire('Lỗi', 'Không thể tải dữ liệu tháng', 'error');
                    });
            }

            // --- 5. SỰ KIỆN FILTER CHUNG ---
            // Khi đổi Filter Status hoặc Sân -> Reload cả 2 bảng về trang 1
            window.reloadAllTables = function() {
                console.log("Đang filter lại cả 2 bảng...");

                // 1. Reset về trang 1 và tải lại Daily
                loadBookings(1);

                // 2. Reset về trang 1 và tải lại Monthly
                loadMonthlyBookings(1);
            };

            // --- 6. UI HELPERS (TAB SWITCH) ---
            document.getElementById('bh-bookingTypeFilter').addEventListener('change', function() {
                const type = this.value;
                document.getElementById('bh-daily-booking-section').style.display = (type === 'all' || type === 'daily') ? 'block' : 'none';
                document.getElementById('bh-monthly-booking-section').style.display = (type === 'all' || type === 'monthly') ? 'block' : 'none';
            });

            // --- 7. EVENT DELEGATION (XỬ LÝ CLICK) ---
            container.addEventListener('click', e => {
                const target = e.target;

                // A. Expand/Collapse Child Rows (Cho bảng Monthly)
                if(target.closest('.expand-toggle')) {
                    const parentRow = target.closest('.bh-parent-row');
                    parentRow.classList.toggle('expanded');

                    // Tìm dòng con tương ứng
                    const monthlyId = parentRow.dataset.monthlyId;
                    // Vì bảng Monthly có thể nằm trong Partial View mới load lại, querySelector vẫn chạy tốt
                    const childRow = container.querySelector(`.bh-child-row[data-parent-monthly-id="${monthlyId}"]`);

                    if(childRow) {
                        childRow.style.display = parentRow.classList.contains('expanded') ? 'table-row' : 'none';
                        // Đổi icon mũi tên
                        const icon = target.closest('.expand-toggle');
                        if(parentRow.classList.contains('expanded')) {
                            icon.classList.remove('fa-chevron-down');
                            icon.classList.add('fa-chevron-up');
                        } else {
                            icon.classList.remove('fa-chevron-up');
                            icon.classList.add('fa-chevron-down');
                        }
                    }
                    return;
                }

                // B. Các nút bấm (Details / Cancel)
                const btn = target.closest('.bh-btn-icon');
                if(!btn) return;

                // --- XEM CHI TIẾT ---
                if(btn.classList.contains('details')) {
                    const id = btn.dataset.bookingId;
                    const type = btn.dataset.bookingType;
                    let item = null;

                    if (type === 'monthly') {
                        // Tìm trong cache Monthly hiện tại
                        item = monthlyBookingsCache.find(m => m.monthlyBooking.id == id);
                    }
                    else {
                        // Tìm trong cache Daily hiện tại
                        item = dailyBookingsCache.find(d => d.booking.id == id);
                    }

                    if(item) {
                        populateModal(item, type);
                    } else {
                        // Trường hợp hãn hữu cache chưa kịp update hoặc lỗi
                        Swal.fire('Thông tin', 'Dữ liệu chưa tải xong hoặc không tồn tại. Vui lòng tải lại trang.', 'info');
                    }
                }
                // --- HỦY LỊCH ---
                else if(btn.classList.contains('cancel')) {
                    Swal.fire({
                        title: 'Xác nhận hủy?', text: "Không thể hoàn tác!", icon: 'warning',
                        showCancelButton: true, confirmButtonColor: '#d33', confirmButtonText: 'Hủy lịch'
                    }).then(result => {
                        if (result.isConfirmed) {
                             fetch(`/Booking/CancelBooking/${btn.dataset.bookingId}`, { method: 'POST' })
                            .then(res => res.json()).then(data => {
                                if (data.success) {
                                    Swal.fire('Thành công', 'Đã hủy lịch.', 'success');
                                    // Reload bảng tương ứng
                                    if(btn.dataset.bookingType === 'monthly') loadMonthlyBookings(1);
                                    else loadBookings(1);
                                } else { throw new Error(data.message); }
                            }).catch(err => Swal.fire('Lỗi', err.message, 'error'));
                        }
                    });
                }
            });

            // --- 8. MODAL POPULATE ---
            const openModal = () => modalEl.style.display = 'flex';
            const closeModal = () => modalEl.style.display = 'none';
            modalEl.addEventListener('click', (e) => { if (e.target === modalEl || e.target.closest('.bh-modal-close')) closeModal(); });

            function populateModal(vm, type) {
                const booking = (type === 'monthly') ? vm.monthlyBooking : vm.booking;
                const details = (type === 'monthly') ? vm.bookings : booking.bookingDetails;
                const discount = vm.discount;
                const stadium = stadiums.find(s => s.id === booking.stadiumId);
                const modalBody = document.getElementById('bh-modal-body');

                document.getElementById('bh-modal-title').textContent = `Chi tiết #${booking.id}`;
                const fmtMoney = (v) => new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(v);

                // --- TÍNH TOÁN GIÁ ---
                let totalPrice = booking.totalPrice || 0;
                let originalPrice = 0;

                if (type === 'monthly') {
                    // Với Monthly, Original Price = Tổng Original Price của các booking con
                    if (details && details.length > 0) {
                        originalPrice = details.reduce((sum, item) => sum + (item.originalPrice || item.totalPrice || 0), 0);
                    } else {
                        originalPrice = totalPrice; // Fallback
                    }
                } else {
                    // Với Daily, lấy trực tiếp
                    originalPrice = booking.originalPrice || totalPrice;
                }

                // Tính tiền giảm
                let savedAmount = originalPrice - totalPrice;
                if (savedAmount < 0) savedAmount = 0; // Đề phòng lỗi data

                // --- RENDER HTML ---
                let html = `
                    <div class="bh-modal-section">
                        <h4>Thông tin chung</h4>
                        <div class="bh-modal-grid">
                            <div class="bh-modal-item"><span class="label">Sân</span><span class="value">${stadium?.name || 'N/A'}</span></div>
                            <div class="bh-modal-item"><span class="label">Ngày tạo</span><span class="value">${new Date(booking.createdAt).toLocaleDateString('vi-VN')}</span></div>
                            <div class="bh-modal-item"><span class="label">Trạng thái</span><span class="value" style="font-weight:bold;">${translateStatusJS(booking.status)}</span></div>
                        </div>
                    </div>`;

                // List Chi Tiết
                html += `<div class="bh-modal-section"><h4 style="margin-top:10px;">Chi tiết đặt sân</h4><div class="bh-modal-list">`;
                if(type === 'monthly') {
                    if(details && details.length > 0) {
                        details.forEach(b => {
                            html += `<div class="bh-modal-list-item"><span>${new Date(b.date).toLocaleDateString('vi-VN')}</span><span>${translateStatusJS(b.status)}</span></div>`;
                        });
                    } else { html += `<p>Chưa có lịch con.</p>`; }
                } else {
                    if(details && details.length > 0) {
                        details.forEach(d => {
                            html += `<div class="bh-modal-list-item"><span>${d.courtName}</span><span>${d.startTime.substring(11,16)} - ${d.endTime.substring(11,16)}</span></div>`;
                        });
                    }
                }
                html += `</div></div>`;

                // --- PHẦN GIÁ TIỀN (ĐÃ CẬP NHẬT) ---
                html += `<div class="bh-modal-pricing">`;

                // Nếu có giảm giá thì hiện giá gốc và số tiền giảm
                if (savedAmount > 0) {
                    html += `<div class="total" style="font-size: 0.9em; color: #64748b; margin-bottom: 5px;">
                                <span class="label">Giá gốc</span>
                                <span class="value" style="text-decoration: line-through;">${fmtMoney(originalPrice)}</span>
                             </div>`;

                    html += `<div class="total" style="font-size: 0.9em; color: #22c55e; margin-bottom: 10px;">
                                <span class="label">Đã giảm ${discount ? `(${discount.code})` : ''}</span>
                                <span class="value">-${fmtMoney(savedAmount)}</span>
                             </div>`;
                }

                html += `<div class="total" style="border-top: 1px solid #eee; padding-top: 10px;">
                            <span class="label" style="font-weight: 700;">Tổng cộng</span>
                            <span class="value" style="font-size: 1.2em; color: #2563eb;">${fmtMoney(totalPrice)}</span>
                         </div>
                         </div>`;

                modalBody.innerHTML = html;
                openModal();
            }
        });
    </script>
}