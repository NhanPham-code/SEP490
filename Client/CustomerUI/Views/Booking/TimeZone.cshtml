<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh Toán</title>
    <!-- Thư viện Tailwind CSS cho styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font chữ Inter từ Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6; /* Màu nền nhẹ */
        }

        .modal {
            background-color: rgba(0, 0, 0, 0.5);
            display: none; /* Ẩn ban đầu */
        }
    </style>
</head>
<body class="min-h-screen p-4 flex items-center justify-center">

    <!-- Modal tùy chỉnh cho thông báo -->
    <div id="custom-modal" class="modal fixed inset-0 z-50 flex items-center justify-center">
        <div class="bg-white rounded-lg p-6 shadow-xl max-w-sm w-full mx-4">
            <h3 id="modal-title" class="text-xl font-bold text-gray-800 mb-2"></h3>
            <p id="modal-message" class="text-gray-600 mb-4"></p>
            <div class="text-right">
                <button id="modal-close-btn" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg">Đóng</button>
            </div>
        </div>
    </div>

    <!-- Trang Checkout -->
    <div id="checkout-container" class="bg-white rounded-2xl shadow-lg p-6 md:p-8 max-w-xl w-full mx-auto">
        <h1 class="text-3xl font-bold text-indigo-600 text-center mb-6">Thông Tin Đặt Sân</h1>

        <!-- Thông tin hóa đơn -->
        <div class="p-6 bg-gray-50 rounded-xl shadow-inner mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Chi tiết hóa đơn</h2>
            <div class="space-y-3 text-gray-700">
                <div class="flex justify-between">
                    <span>Sân vận động:</span>
                    <span id="checkout-stadium-name" class="font-bold">Sân vận động Thống Nhất</span>
                </div>
                <div class="flex justify-between">
                    <span>Sân:</span>
                    <span id="checkout-court-name" class="font-bold text-indigo-600">Sân số 4</span>
                </div>
                <div class="flex justify-between">
                    <span>Thời gian:</span>
                    <span id="checkout-time" class="font-bold">14:00 - 16:00</span>
                </div>
                <div class="flex justify-between">
                    <span>Tổng số giờ:</span>
                    <span id="checkout-duration" class="font-bold">2 giờ</span>
                </div>
                <div class="flex justify-between border-t pt-3 mt-3 border-gray-200">
                    <span>Tạm tính:</span>
                    <span id="checkout-subtotal-price">400,000 VNĐ</span>
                </div>
                <div class="flex justify-between text-green-600 font-bold hidden" id="discount-amount-row">
                    <span>Giảm giá:</span>
                    <span id="checkout-discount-amount">- 0 VNĐ</span>
                </div>
                <div class="flex justify-between font-bold text-lg border-t pt-3 mt-3 border-gray-200 text-gray-900">
                    <span>Tổng cộng:</span>
                    <span id="checkout-total-price" class="text-indigo-600">400,000 VNĐ</span>
                </div>
            </div>
        </div>

        <!-- Thông tin người đặt -->
        <div class="p-6 bg-gray-50 rounded-xl shadow-inner mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Thông tin người đặt</h2>
            <form class="space-y-4">
                <div>
                    <label for="customer-name" class="block text-sm font-medium text-gray-700">Họ và tên</label>
                    <input type="text" id="customer-name" class="mt-1 w-full p-3 rounded-lg border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" value="Nguyễn Văn A" disabled>
                </div>
                <div>
                    <label for="customer-phone" class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                    <input type="text" id="customer-phone" class="mt-1 w-full p-3 rounded-lg border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" value="0901234567" disabled>
                </div>
                <div>
                    <label for="customer-email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="customer-email" class="mt-1 w-full p-3 rounded-lg border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" value="nguyenvana@example.com" disabled>
                </div>
            </form>
        </div>

        <!-- Mã giảm giá -->
        <div class="p-6 bg-gray-50 rounded-xl shadow-inner mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Mã giảm giá</h2>
            <div class="flex gap-2">
                <input type="text" id="discount-code" class="flex-grow p-3 rounded-lg border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Nhập mã giảm giá">
                <button id="apply-discount-button" class="px-6 py-3 rounded-lg font-bold text-white bg-green-500 hover:bg-green-600 transition-colors duration-300">Áp dụng</button>
            </div>
        </div>

        <!-- Phương thức thanh toán -->
        <div class="p-6 bg-gray-50 rounded-xl shadow-inner mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Chọn phương thức thanh toán</h2>
            <div class="space-y-4">
                <label class="flex items-center p-4 bg-white rounded-lg shadow-sm cursor-pointer border border-gray-200 has-[:checked]:border-indigo-600 transition-all duration-200">
                    <input type="radio" name="payment-method" value="bank_transfer" class="form-radio text-indigo-600 h-5 w-5" checked>
                    <span class="ml-3 text-sm font-medium text-gray-700">Chuyển khoản ngân hàng</span>
                </label>
                <label class="flex items-center p-4 bg-white rounded-lg shadow-sm cursor-pointer border border-gray-200 has-[:checked]:border-indigo-600 transition-all duration-200">
                    <input type="radio" name="payment-method" value="at_counter" class="form-radio text-indigo-600 h-5 w-5">
                    <span class="ml-3 text-sm font-medium text-gray-700">Thanh toán tại quầy</span>
                </label>
            </div>
        </div>

        <!-- Nút hành động -->
        <div class="flex justify-between items-center gap-4 mt-8">
            <button id="back-button" class="px-6 py-2 rounded-xl font-bold text-indigo-600 border border-indigo-600 hover:bg-indigo-50 transition-colors duration-300">
                Quay lại
            </button>
            <button id="complete-booking-button" class="w-full px-12 py-3 rounded-xl font-bold text-white transition-all duration-300 shadow-md bg-indigo-600 hover:bg-indigo-700 hover:shadow-lg">
                Hoàn tất đặt sân
            </button>
        </div>
    </div>

    <script>
        // Dữ liệu giả định cho trang thanh toán.
        // Trong ứng dụng thực tế, dữ liệu này sẽ được truyền từ trang trước.
        const mockBookingData = {
            stadiumName: 'Sân vận động Thống Nhất',
            courtName: 'Sân số 4',
            startTime: 14,
            endTime: 16,
            basePricePerHour: 200000,
        };

        let subtotalPrice = (mockBookingData.endTime - mockBookingData.startTime) * mockBookingData.basePricePerHour;
        let discountAmount = 0;
        let totalPrice = subtotalPrice;

        // Hàm hiển thị modal thông báo tùy chỉnh
        function showModal(title, message) {
            document.getElementById('modal-title').textContent = title;
            document.getElementById('modal-message').textContent = message;
            document.getElementById('custom-modal').style.display = 'flex';
        }

        // Hàm ẩn modal
        function hideModal() {
            document.getElementById('custom-modal').style.display = 'none';
        }

        // Hàm định dạng số thành tiền tệ (VNĐ)
        function formatCurrency(amount) {
            return `${amount.toLocaleString('vi-VN')} VNĐ`;
        }

        // Hàm cập nhật chi tiết hóa đơn trên UI
        function updateInvoiceDetails() {
            document.getElementById('checkout-stadium-name').textContent = mockBookingData.stadiumName;
            document.getElementById('checkout-court-name').textContent = mockBookingData.courtName;
            document.getElementById('checkout-time').textContent = `${mockBookingData.startTime}:00 - ${mockBookingData.endTime}:00`;
            document.getElementById('checkout-duration').textContent = `${mockBookingData.endTime - mockBookingData.startTime} giờ`;
            document.getElementById('checkout-subtotal-price').textContent = formatCurrency(subtotalPrice);
            document.getElementById('checkout-discount-amount').textContent = `- ${formatCurrency(discountAmount)}`;
            document.getElementById('checkout-total-price').textContent = formatCurrency(totalPrice);

            // Hiển thị dòng giảm giá nếu có
            const discountRow = document.getElementById('discount-amount-row');
            if (discountAmount > 0) {
                discountRow.classList.remove('hidden');
            } else {
                discountRow.classList.add('hidden');
            }
        }

        window.onload = function() {
            // Cập nhật chi tiết ban đầu
            updateInvoiceDetails();

            // Lấy các phần tử mới
            const discountCodeInput = document.getElementById('discount-code');
            const applyDiscountButton = document.getElementById('apply-discount-button');

            // Gán sự kiện cho nút đóng modal
            document.getElementById('modal-close-btn').onclick = hideModal;

            // Gán sự kiện cho nút "Quay lại"
            document.getElementById('back-button').onclick = () => {
                showModal('Quay lại', 'Trong ứng dụng thực tế, bạn sẽ được chuyển về trang đặt sân chính.');
            };

            // Gán sự kiện cho nút "Áp dụng" mã giảm giá
            applyDiscountButton.onclick = () => {
                const code = discountCodeInput.value.trim().toUpperCase();
                // Giả định mã giảm giá
                if (code === 'GIAM10') {
                    const discountPercentage = 0.10;
                    discountAmount = subtotalPrice * discountPercentage;
                    totalPrice = subtotalPrice - discountAmount;
                    updateInvoiceDetails();
                    showModal('Thành công', `Mã giảm giá "${code}" đã được áp dụng. Bạn được giảm giá ${formatCurrency(discountAmount)}.`);
                } else if (code === '') {
                    showModal('Thông báo', 'Vui lòng nhập mã giảm giá.');
                } else {
                    showModal('Lỗi', `Mã giảm giá "${code}" không hợp lệ.`);
                }
            };

            // Gán sự kiện cho nút "Hoàn tất đặt sân"
            document.getElementById('complete-booking-button').onclick = () => {
                const courtName = document.getElementById('checkout-court-name').textContent;
                const time = document.getElementById('checkout-time').textContent;
                const finalPrice = document.getElementById('checkout-total-price').textContent;
                showModal('Đặt sân thành công!', `Bạn đã đặt thành công ${courtName} vào thời gian ${time}. Tổng tiền cần thanh toán là ${finalPrice}.`);
            };
        };
    </script>
</body>
</html>
