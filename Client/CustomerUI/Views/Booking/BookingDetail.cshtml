@model DTOs.BookingDTO.BookingReadDto

@{
    ViewData["Title"] = "Chi tiết Booking";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden p-8">
        <div class="flex items-center justify-between mb-8 pb-4 border-b border-gray-200">
            <h2 class="text-3xl font-bold text-gray-800">Chi tiết Booking</h2>
            <a asp-action="BookingHistory" class="text-indigo-600 hover:text-indigo-800 transition-colors duration-200 font-medium">
                &larr; Quay lại lịch sử booking
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-6 gap-x-12 mb-8">
            <div class="flex items-center">
                <span class="text-gray-500 w-24">Mã Booking:</span>
                <span class="font-bold text-gray-800">#@Model.Id</span>
            </div>
            <div class="flex items-center">
                <span class="text-gray-500 w-24">Ngày:</span>
                <span class="font-semibold text-gray-800">@Model.Date.ToString("dd/MM/yyyy")</span>
            </div>
            <div class="flex items-center">
                <span class="text-gray-500 w-24">Trạng thái:</span>
                @{
                    var statusClass = "";
                    var statusText = "";
                    switch (Model.Status)
                    {
                        case "Confirmed": statusClass = "bg-green-100 text-green-700"; statusText = "Đã xác nhận"; break;
                        case "pending": statusClass = "bg-yellow-100 text-yellow-700"; statusText = "Đang chờ"; break;
                        case "Cancelled": statusClass = "bg-red-100 text-red-700"; statusText = "Đã hủy"; break;
                        default: statusClass = "bg-gray-100 text-gray-700"; statusText = $"{Model.Status}"; break;
                    }
                }
                <span class="px-3 py-1 text-xs font-semibold rounded-full @statusClass">
                    @statusText
                </span>
            </div>
            <div class="flex items-center">
                <span class="text-gray-500 w-24">Sân Vận Động:</span>
                <span class="font-semibold text-gray-800">@ViewBag.StadiumName</span>
            </div>
            <div class="flex items-center">
                <span class="text-gray-500 w-24">Thanh Toán:</span>
                <span class="font-semibold text-gray-800">@(Model.PaymentMethod ?? "Chưa xác định")</span>
            </div>
            <div class="flex items-center">
                <span class="text-gray-500 w-24">Ngày tạo:</span>
                <span class="font-semibold text-gray-800">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
            </div>

            <div class="md:col-span-2 bg-gray-50 p-4 rounded-lg">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-gray-500">Tổng tiền ban đầu:</span>
                    <span class="font-semibold text-gray-800">@ViewBag.OriginalTotalPrice VNĐ</span>
                </div>
                <div class="flex items-center justify-between mb-2">
                    <span class="text-gray-500">Mã giảm giá:</span>
                    <span class="font-semibold text-gray-800">@ViewBag.DiscountCode</span>
                </div>
                <div class="flex items-center justify-between mb-4">
                    <span class="text-gray-500">Số tiền giảm:</span>
                    <span class="font-semibold text-green-600">- @ViewBag.DiscountAmount VNĐ</span>
                </div>
                <div class="border-t border-gray-300 pt-4">
                    <div class="flex items-center justify-between">
                        <span class="text-lg font-medium text-gray-700">Tổng thanh toán:</span>
                        <span class="text-2xl font-extrabold text-indigo-600">@Model.TotalPrice?.ToString("N0") VNĐ</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="border-t border-gray-200 pt-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Các sân đã đặt</h3>
            @if (Model.BookingDetails != null && Model.BookingDetails.Any())
            {
                <div class="space-y-4">
                    @foreach (var detail in Model.BookingDetails)
                    {
                        <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div class="flex items-center">
                                    <span class="text-gray-500 w-16">Sân:</span>
                                    <span class="font-medium text-gray-800">#@detail.CourtId</span>
                                </div>
                                <div class="flex items-center">
                                    <span class="text-gray-500 w-20">Bắt đầu:</span>
                                    <span class="font-medium text-gray-800">@detail.StartTime.ToString("HH:mm dd/MM/yyyy")</span>
                                </div>
                                <div class="flex items-center">
                                    <span class="text-gray-500 w-20">Kết thúc:</span>
                                    <span class="font-medium text-gray-800">@detail.EndTime.ToString("HH:mm dd/MM/yyyy")</span>
                                </div>
                            </div>
                            <div class="mt-2 pt-2 border-t border-gray-200">
                                <span class="text-sm text-gray-600">
                                    Thời gian: @((detail.EndTime - detail.StartTime).TotalHours) giờ
                                </span>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <p class="text-yellow-700 italic">Không có thông tin chi tiết sân.</p>
                </div>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <div class="border-t border-gray-200 pt-8 mt-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Ghi chú</h3>
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <p class="text-blue-800">
                        @Model.Note
                    </p>
                </div>
            </div>
        }

        <div class="border-t border-gray-200 pt-6 mt-8">
            <div class="flex justify-between items-center text-sm text-gray-500">
                <span>Cập nhật lần cuối: @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                @if (Model.Status == "Pending")
                {
                    <div class="space-x-2">
                        <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors duration-200">
                            Hủy booking
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>