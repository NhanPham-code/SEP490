<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Join Requests - Stadium Booking Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
          theme: {
            extend: {
              colors: {
                primary: "#3b82f6",
                secondary: "#10b981",
              },
              borderRadius: {
                none: "0px",
                sm: "4px",
                DEFAULT: "8px",
                md: "12px",
                lg: "16px",
                xl: "20px",
                "2xl": "24px",
                "3xl": "32px",
                full: "9999px",
                button: "8px",
              },
            },
          },
        };
    </script>
    <style>
        :where([class^="ri-"])::before {
            content: "\f3c2";
        }

        .hero-bg {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
        }

        .mobile-menu {
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out;
        }

            .mobile-menu.open {
                transform: translateX(0);
            }

        .search-expanded {
            width: 100%;
            opacity: 1;
        }

        .filter-sheet {
            transform: translateY(100%);
            transition: transform 0.3s ease-in-out;
        }

            .filter-sheet.open {
                transform: translateY(0);
            }

        .request-card {
            transition: transform 0.2s ease-in-out;
        }

            .request-card:hover {
                transform: translateY(-2px);
            }
    </style>
</head>
<body class="bg-gray-50 font-sans">
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold">Manage Join Requests</h2>
                <a asp-controller="Home" asp-action="MyPosts" class="bg-primary text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-blue-600 transition-colors">Back to My Posts</a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Request 1 -->
                <div class="request-card bg-gray-50 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex items-start gap-3 mb-4">
                        <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white font-semibold">SM</div>
                        <div>
                            <h3 class="font-medium">Sarah Miller</h3>
                            <p class="text-sm text-gray-600">Intermediate Level</p>
                        </div>
                    </div>
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-basketball-line mr-2"></i>
                            <span>Basketball - Victory Court</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-calendar-line mr-2"></i>
                            <span>Aug 12, 2025 - 18:00</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-message-line mr-2"></i>
                            <span>Interested in joining your basketball game!</span>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <button class="flex-1 bg-secondary text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-green-700 transition-colors accept-request">Accept</button>
                        <button class="flex-1 bg-red-500 text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-red-600 transition-colors reject-request">Reject</button>
                    </div>
                </div>

                <!-- Request 2 -->
                <div class="request-card bg-gray-50 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex items-start gap-3 mb-4">
                        <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white font-semibold">AL</div>
                        <div>
                            <h3 class="font-medium">Alex Lee</h3>
                            <p class="text-sm text-gray-600">Beginner Level</p>
                        </div>
                    </div>
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-tennis-line mr-2"></i>
                            <span>Tennis - Grand Slam Courts</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-calendar-line mr-2"></i>
                            <span>Aug 14, 2025 - 10:00</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-message-line mr-2"></i>
                            <span>Excited to practice tennis with you!</span>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <button class="flex-1 bg-secondary text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-green-700 transition-colors accept-request">Accept</button>
                        <button class="flex-1 bg-red-500 text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-red-600 transition-colors reject-request">Reject</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Basic JavaScript for Accept/Reject Actions -->
    <script>
        // Handle Accept Request
        document.querySelectorAll('.accept-request').forEach(button => {
            button.addEventListener('click', () => {
                alert('Request accepted!');
                // Simulate accepting the request (replace with actual backend logic)
                button.closest('.request-card').remove();
            });
        });

        // Handle Reject Request
        document.querySelectorAll('.reject-request').forEach(button => {
            button.addEventListener('click', () => {
                if (confirm('Are you sure you want to reject this request?')) {
                    // Simulate rejecting the request (replace with actual backend logic)
                    button.closest('.request-card').remove();
                }
            });
        });
    </script>
</body>
</html>