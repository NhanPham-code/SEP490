<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Posts - Stadium Booking Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
          theme: {
            extend: {
              colors: {
                primary: "#3b82f6",
                secondary: "#10b981",
              },
              borderRadius: {
                button: "8px",
              },
            },
          },
        };
    </script>
    <style>
        .hero-bg {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
        }

        .mobile-menu {
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out;
        }

            .mobile-menu.open {
                transform: translateX(0);
            }

        .filter-sheet {
            transform: translateY(100%);
            transition: transform 0.3s ease-in-out;
        }

            .filter-sheet.open {
                transform: translateY(0);
            }

        .stadium-card {
            transition: transform 0.2s ease-in-out;
        }

            .stadium-card:hover {
                transform: translateY(-2px);
            }

        .post-card {
            cursor: pointer;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans">
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold">My Posts</h2>
                <a href="index.html" class="bg-primary text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-blue-600 transition-colors">Create New Post</a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Post 1 -->
                <a asp-controller="Home" asp-action="ManageJoinRequests" class="post-card bg-gray-50 rounded-lg p-4 hover:shadow-md transition-shadow" >
                    <div class="flex items-start gap-3 mb-4">
                        <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white font-semibold">JD</div>
                        <div>
                            <h3 class="font-medium">John Davis</h3>
                            <p class="text-sm text-gray-600">Intermediate Level</p>
                        </div>
                    </div>
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-basketball-line mr-2"></i>
                            <span>Basketball</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-calendar-line mr-2"></i>
                            <span>Aug 12, 2025 - 18:00</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-map-pin-line mr-2"></i>
                            <span>Victory Court</span>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600 mb-4">Looking for 3 players for a friendly basketball game. All skill levels welcome!</p>
                    <div class="flex gap-2">
                        <button class="flex-1 bg-secondary text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-green-700 transition-colors">Edit Post</button>
                        <button class="flex-1 bg-red-500 text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-red-600 transition-colors delete-post">Delete Post</button>
                    </div>
                </a>

                <!-- Post 2 -->
                <div class="post-card bg-gray-50 rounded-lg p-4 hover:shadow-md transition-shadow" data-url="post-detail.html">
                    <div class="flex items-start gap-3 mb-4">
                        <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white font-semibold">JD</div>
                        <div>
                            <h3 class="font-medium">John Davis</h3>
                            <p class="text-sm text-gray-600">Beginner Level</p>
                        </div>
                    </div>
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-tennis-line mr-2"></i>
                            <span>Tennis</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-calendar-line mr-2"></i>
                            <span>Aug 14, 2025 - 10:00</span>
                        </div>
                        <div class="flex items-center text-sm text-gray-600">
                            <i class="ri-map-pin-line mr-2"></i>
                            <span>Grand Slam Courts</span>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600 mb-4">Seeking a tennis partner for practice. Beginners welcome!</p>
                    <div class="flex gap-2">
                        <button class="flex-1 bg-secondary text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-green-700 transition-colors">Edit Post</button>
                        <button class="flex-1 bg-red-500 text-white px-4 py-2 rounded-button text-sm font-semibold hover:bg-red-600 transition-colors delete-post">Delete Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Delete confirmation
        document.querySelectorAll('.delete-post').forEach(button => {
            button.addEventListener('click', (e) => {
                e.stopPropagation(); // Prevent triggering post click
                if (confirm('Are you sure you want to delete this post?')) {
                    button.closest('.post-card').remove();
                }
            });
        });

        // Click to open post detail
        document.querySelectorAll('.post-card').forEach(card => {
            card.addEventListener('click', (e) => {
                if (!e.target.closest('button')) {
                    const url = card.getAttribute('data-url');
                    window.location.href = url;
                }
            });
        });
    </script>
</body>
</html>