          }

          // Chuyển đổi đầu vào thành kiểu số để xử lý
          const numericAmount = parseFloat(amount);

          // 2. Xử lý trường hợp đặc biệt: miễn phí
          if (numericAmount === 0) {
            return 'Miễn phí';
          }

          // 3. Sử dụng Intl.NumberFormat để định dạng số theo chuẩn Việt Nam
