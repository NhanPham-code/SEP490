                            <i class="ri-eye-line password-toggle text-xl" onclick="togglePassword('login-password', this)"></i>
                        </div>
                        <div id="login-password-error" class="field-error">
                            <i class="ri-error-warning-line"></i>
                            <span></span>
                        </div>
                    </div>

