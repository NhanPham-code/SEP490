@{
    ViewData["Title"] = "Đăng nhập / Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sportivey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />

    <link href="~/css/common/login.css" rel="stylesheet" />
    <!-- SỬA TÊN FILE CSS CHO ĐÚNG -->
    <link href="~/css/common/social-button.css" rel="stylesheet" />

    <!-- 1. THÊM THƯ VIỆN GOOGLE SIGN-IN -->
