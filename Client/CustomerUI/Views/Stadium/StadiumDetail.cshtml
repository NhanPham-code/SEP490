        // ================================
        // ✅ CHECK USER FEEDBACK (Updated)
        // ================================
        function checkUserFeedback(stadiumId) {
            $.ajax({
                url: '/Feedback/GetMyFeedbackForStadium',
                type: 'GET',
                data: { stadiumId: stadiumId },
                success: function(response) {
                    console.log("User feedback check:", response);
                    if (response.success && response.data) {
                        // ✅ Data đã có full URL từ Controller
                        console.log("My feedback image:", response.data.imagePath);

                        // User has existing feedback - switch to edit mode
                        loadExistingFeedback(response.data);
                    } else {
                        // User doesn't have feedback - stay in create mode
                        setCreateMode();
                    }
                },
                error: function(xhr) {
                    console.log("User feedback check failed - probably not logged in");
                    setCreateMode();
                }
