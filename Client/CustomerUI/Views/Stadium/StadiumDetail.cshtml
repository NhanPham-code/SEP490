        /* Chỉ sửa cho mobile-only feedback box */
        @@media (max-width: 767px) {
            .mobile-only .feedback-item

        {
            overflow: hidden; /* Chắn phần tử con vượt ra ngoài */
            border-radius: 1.5rem; /* Đảm bảo đúng bo góc như khối lớn */
            position: relative; /* Để có thể xếp lớp phần tử con */
        }

        .mobile-only .feedback-item img,
        .mobile-only .feedback-item svg {
            max-width: 100%;
            height: auto;
            border-radius: 12px; /* Bớt cứng, hạn chế góc vuông */
