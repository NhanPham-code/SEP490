        function setCreateMode() {
            isEditMode = false;
            currentFeedbackId = null;

            $('#form-title').text('Đánh giá sân bóng');
            $('#submit-text').text('✨ Gửi phản hồi');
            $('#cancel-edit-btn').addClass('hidden');
