        /* Image upload section responsive */
        .image-upload-section {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        @@media (min-width: 640px) {
            .image-upload-section {
                gap: 1rem;
            }
        }

        .image-upload-info {
            font-size: 0.75rem;
            text-align: center;
        }

        @@media (min-width: 640px) {
            .image-upload-info {
                font-size: 0.875rem;
                text-align: left;
            }
        }

        /* Character counter responsive */
        #char-counter {
            font-size: 0.625rem;
            bottom: 0.5rem;
            right: 0.5rem;
        }

        @@media (min-width: 640px) {
            #char-counter {
                font-size: 0.75rem;
                bottom: 0.75rem;
                right: 0.75rem;
            }
