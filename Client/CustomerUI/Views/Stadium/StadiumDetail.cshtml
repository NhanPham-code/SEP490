           ============================================================= */

        // 1. Đảm bảo biến toàn cục cho Slider
        window.slideIndex = 1;
        window.slideTimer = null;
        window.isVideoPlaying = false;

        // 2. Định nghĩa hàm plusSlides GẮN TRỰC TIẾP vào WINDOW để HTML gọi được
        window.plusSlides = function(n) {
            window.showSlides(window.slideIndex += n);
            resetAutoSlide();
        };

        window.currentSlide = function(n) {
            window.showSlides(window.slideIndex = n);
            resetAutoSlide();
        };

        window.showSlides = function(n) {
            let slides = document.getElementsByClassName("slider-item");

            // Nếu chưa có slide nào thì dừng, không báo lỗi
            if (!slides || slides.length === 0) return;

            // Logic vòng lặp
            if (n > slides.length) { window.slideIndex = 1 }
            if (n < 1) { window.slideIndex = slides.length }

            // Tạm dừng mọi video đang phát
            document.querySelectorAll('video').forEach(v => v.pause());
            window.isVideoPlaying = false;

            // Ẩn tất cả slide
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.opacity = "0";
                slides[i].style.zIndex = "0";
                slides[i].style.pointerEvents = "none";
            }

            // Hiện slide hiện tại
            let current = slides[window.slideIndex - 1];
            if (current) {
                current.style.opacity = "1";
                current.style.zIndex = "10";
                current.style.pointerEvents = "auto";

                // Nếu là video: Xử lý logic dừng tự động chuyển
                let vid = current.querySelector('video');
                if (vid) {
                    vid.onplay = () => { window.isVideoPlaying = true; stopAutoSlide(); };
                    vid.onpause = () => { window.isVideoPlaying = false; startAutoSlide(); };
                    vid.onended = () => { window.isVideoPlaying = false; window.plusSlides(1); };
                }
            }
        };

        // 3. Logic tự động chạy (Auto Slide)
        function startAutoSlide() {
            stopAutoSlide();
            if (!window.isVideoPlaying) {
                window.slideTimer = setTimeout(() => window.plusSlides(1), 5000);
            }
        }

        function stopAutoSlide() {
            if (window.slideTimer) {
                clearTimeout(window.slideTimer);
                window.slideTimer = null;
            }
        }

        function resetAutoSlide() {
            stopAutoSlide();
            if (!window.isVideoPlaying) startAutoSlide();
        }

        // 4. Sửa lỗi Modal (Dùng getElementById trực tiếp để không bị lỗi undefined)
        window.onclick = function(event) {
            let modal = document.getElementById('custom-modal');
            let bookingModal = document.getElementById('booking-modal');

            if (modal && event.target == modal) modal.style.display = "none";
            if (bookingModal && event.target == bookingModal) bookingModal.style.display = "none";
        };

        // 5. Khởi chạy khi trang tải xong
        document.addEventListener("DOMContentLoaded", function() {
            window.showSlides(window.slideIndex);
            startAutoSlide();
        });
    </script>
