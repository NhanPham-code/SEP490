        .mobile-only .feedback-item [class*='icon'] {
            max-width: 90%;
            width: 100%;
            height: auto;
            margin: 0 auto;
            position: static !important;
            left: unset !important;
            right: unset !important;
            top: unset !important;
            bottom: unset !important;
            transform: none !important;
            box-shadow: none !important;
            z-index: 1;
            background: none;
        }

        }
    </style>
