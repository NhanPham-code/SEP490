          function showModal(title, message) {
            const lower = (title || '').toLowerCase();
            const type = (lower.includes('lỗi') || lower.includes('error')) ? 'error'
                       : (lower.includes('thành công') || lower.includes('success')) ? 'success'
                       : 'info';

            // Show non-blocking toast
            showNotification(message || title, type);

            // If Swal exists, show a nice modal too (optional)
            if (typeof Swal !== 'undefined') {
              Swal.fire({
                title: title || '',
                text: message || '',
                icon: type === 'error' ? 'error' : type === 'success' ? 'success' : 'info',
                confirmButtonText: 'OK',
                timer: type === 'success' ? 1800 : null
              });
            } else {
              // fallback: populate custom modal (non-blocking)
              if (modalEl) {
                const tEl = modalEl.querySelector('#modal-title');
                const mEl = modalEl.querySelector('#modal-message');
                if (tEl) tEl.textContent = title || '';
                if (mEl) mEl.textContent = message || '';
                modalEl.style.display = 'flex';
              } else {
                // last resort
                console.log('Modal/Swal not available, message:', title, message);
              }
            }
          }

          function hideModal() { if (modalEl) modalEl.style.display = 'none'; }
          function showBookingModal() { if (bookingModalEl) bookingModalEl.style.display = 'flex'; }
          function hideBookingModal() { if (bookingModalEl) bookingModalEl.style.display = 'none'; }

          // wire up built-in buttons if they exist
          if (document.getElementById('modal-close-btn')) {
            document.getElementById('modal-close-btn').addEventListener('click', hideModal);
          }
          if (document.getElementById('booking-modal-close-btn')) {
            document.getElementById('booking-modal-close-btn').addEventListener('click', hideBookingModal);
          }

          // expose to global scope if other scripts call them
          window.showNotification = showNotification;
          window.showModal = showModal;
          window.hideModal = hideModal;
          window.showBookingModal = showBookingModal;
          window.hideBookingModal = hideBookingModal;
        })();
    </script>

