        }

        /* Empty state */
        .feedback-empty-state {
            text-align: center;
            padding: 2rem 1rem;
        }

            .feedback-empty-state i {
                font-size: 2rem;
                margin-bottom: 0.75rem;
            }

        @@media (min-width: 640px) {
            .feedback-empty-state {
                padding: 3rem 2rem;
            }

                .feedback-empty-state i {
                    font-size: 3rem;
                    margin-bottom: 1rem;
                }
        }

        /* Toast notification */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            min-width: 320px;
            max-width: calc(100% - 40px);
            padding: 12px 16px;
            border-radius: 8px;
            color: white;
            z-index: 99999;
            opacity: 0;
            transform: translateX(20px);
            transition: all 0.25s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.15);
            font-weight: 600;
        }

            .notification.show {
                opacity: 1;
                transform: translateX(0);
            }

            .notification.success {
                background: linear-gradient(90deg, #16a34a, #10b981);
            }

            .notification.error {
                background: linear-gradient(90deg, #dc2626, #ef4444);
            }

            .notification.info {
                background: linear-gradient(90deg, #0ea5e9, #0284c7);
            }

            .notification .close-btn {
                background: transparent;
                border: none;
                color: rgba(255,255,255,0.95);
                font-size: 16px;
                cursor: pointer;
                margin-left: auto;
            }

            .slider-video {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Keeps video aspect ratio within the container */
            background: black; /* Background for letterboxing */
        }
