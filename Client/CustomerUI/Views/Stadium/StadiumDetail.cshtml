        function cancelEdit() {
            if (confirm('Bạn có chắc chắn muốn hủy chỉnh sửa?')) {
                checkUserFeedback(stadiumId); // Reload original data
            }
        }

        // ================================
        // FORM FUNCTIONS
        // ================================
        function initializeFeedbackForm() {
            $('#feedback-form').on('submit', handleFeedbackSubmit);

            // Character counter
            $('#feedback-textarea').on('input', updateCharCounter);

            // Image preview
            $('#feedback-image').on('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    if (file.size > 5 * 1024 * 1024) {
                        showModal('Lỗi', 'Kích thước ảnh không được vượt quá 5MB!');
                        $(this).val('');
                        return;
                    }

                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                    if (!allowedTypes.includes(file.type.toLowerCase())) {
                        showModal('Lỗi', 'Chỉ chấp nhận file ảnh (JPG, PNG, GIF)!');
                        $(this).val('');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#image-preview').html(`
                            <div class="relative inline-block">
                                <img src="${e.target.result}" alt="Preview" class="max-w-xs max-h-48 rounded-lg shadow-md">
                                <button type="button" onclick="clearImagePreview()"
                                        class="absolute -top-2 -right-2 bg-red-500 hover:bg-red-600 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm transition-colors duration-200">
                                    ×
                                </button>
                            </div>
                            <p class="text-sm text-gray-600 mt-2">
                                <i class="fas fa-image mr-1"></i>
                                ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)
                            </p>
                        `).removeClass('hidden');
                    };
                    reader.readAsDataURL(file);
                }
            });
        }

        function updateCharCounter() {
            const currentLength = $('#feedback-textarea').val().length;
            const maxLength = 500;
            $('#char-counter').text(`${currentLength}/${maxLength}`);

            if (currentLength > maxLength) {
                $('#feedback-textarea').addClass('border-red-500');
                $('#char-counter').addClass('text-red-500');
            } else {
                $('#feedback-textarea').removeClass('border-red-500');
                $('#char-counter').removeClass('text-red-500');
            }
        }

        function handleFeedbackSubmit(e) {
            e.preventDefault();
            console.log("Form submitted, edit mode:", isEditMode);

            // Validate rating
            if (selectedRating === 0 || !selectedRating) {
                showModal('Lỗi', 'Vui lòng chọn số sao đánh giá!');
                return;
            }

            const ratingValue = parseInt(selectedRating);
            if (isNaN(ratingValue) || ratingValue < 1 || ratingValue > 5) {
                showModal('Lỗi', 'Đánh giá phải từ 1 đến 5 sao!');
                return;
            }

            const comment = $('#feedback-textarea').val().trim();
            if (comment.length > 500) {
                showModal('Lỗi', 'Bình luận không được vượt quá 500 ký tự!');
                return;
            }

            // Create FormData
            const formData = new FormData();

            if (isEditMode) {
                formData.append('feedbackId', currentFeedbackId);
            } else {
                formData.append('stadiumId', stadiumId);
            }

            formData.append('rating', ratingValue);
            formData.append('comment', comment);

            // Add image if exists
            const imageInput = $('#feedback-image')[0];
            if (imageInput && imageInput.files.length > 0) {
                formData.append('image', imageInput.files[0]);
            }

            // Show loading state
            const submitBtn = $('#submit-btn');
            const originalText = submitBtn.html();
            submitBtn.html('<i class="fas fa-spinner fa-spin mr-2"></i>Đang xử lý...').prop('disabled', true);

            // Choose URL based on mode
            const url = isEditMode ? '/Feedback/EditFeedback' : '/Feedback/Create';

            console.log("Submitting to:", url, "Edit mode:", isEditMode);

            $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    console.log('Success response:', response);

                    if (response.success) {
                        showModal('Thành công!', response.message);

                        // ✅ Reload feedback list để cập nhật phân trang
                        if (isEditMode) {
                            // Stay on current page for edit
                            loadFeedbacks(stadiumId, currentPage);
                            // ✅ Reload user feedback để cập nhật ảnh mới
                            setTimeout(() => {
                                checkUserFeedback(stadiumId);
                            }, 500);
                        } else {
                            // Go to first page for new feedback
                            loadFeedbacks(stadiumId, 1);
                            // ✅ Load new feedback data
                            setTimeout(() => {
                                checkUserFeedback(stadiumId);
                            }, 500);
                        }

                        // Clear new image preview after successful submit
                        clearImagePreview();
                    } else {
                        showModal('Lỗi', response.message || 'Có lỗi xảy ra.');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('AJAX Error:', {status, error, response: xhr.responseText});

                    let errorMessage = 'Có lỗi xảy ra.';
                    if (xhr.responseJSON?.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.status === 401) {
                        errorMessage = 'Bạn cần đăng nhập để thực hiện thao tác này.';
                    }

                    showModal('Lỗi', errorMessage);
                },
                complete: function() {
                    submitBtn.html(originalText).prop('disabled', false);
                }
            });
        }

        function deleteFeedback() {
            if (!confirm('Bạn có chắc chắn muốn xóa đánh giá này? Hành động này không thể hoàn tác.')) {
                return;
            }

            console.log("Deleting feedback:", currentFeedbackId);

            $.ajax({
                url: '/Feedback/DeleteFeedback',
                type: 'POST',
                data: { feedbackId: currentFeedbackId },
                success: function(response) {
                    console.log('Delete response:', response);

                    if (response.success) {
                        showModal('Thành công!', response.message);

                        // Reset form to create mode
                        resetFeedbackForm();
                        setCreateMode();

                        // ✅ Reload feedback list
                        loadFeedbacks(stadiumId, currentPage);
                    } else {
                        showModal('Lỗi', response.message || 'Có lỗi xảy ra khi xóa feedback.');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Delete error:', {status, error, response: xhr.responseText});

                    let errorMessage = 'Có lỗi xảy ra khi xóa feedback.';
                    if (xhr.responseJSON?.message) {
                        errorMessage = xhr.responseJSON.message;
                    }

                    showModal('Lỗi', errorMessage);
                }
            });
        }

        function removeCurrentImage() {
            $('#current-image').addClass('hidden');
            $('#image-label').text('Chọn ảnh');
        }

        function clearImagePreview() {
            $('#image-preview').html('').addClass('hidden');
            $('#feedback-image').val('');
        }

        function resetFeedbackForm() {
            selectedRating = 0;
            updateStarDisplay();
            $('#feedback-textarea').val('');
            $('#char-counter').text('0/500');
            clearImagePreview();
            $('#current-image').addClass('hidden');
            $('#feedback-textarea').removeClass('border-red-500');
            $('#char-counter').removeClass('text-red-500');
        }

        // ================================
        // ✅ FEEDBACK LIST FUNCTIONS WITH PAGINATION
        // ================================
        function loadFeedbacks(stadiumId, page = 1) {
            console.log("Loading feedbacks for stadium:", stadiumId, "page:", page);

            // Show loading
            $("#feedbackList").html(`
                <div class="text-center py-8">
                    <i class="fas fa-spinner fa-spin text-gray-400 text-2xl mb-3"></i>
                    <p class="text-gray-500">Đang tải đánh giá...</p>
                </div>`);

            $.ajax({
                url: '/Feedback/GetFeedbacksByStadiumDirect',
                type: 'GET',
                data: {
                    stadiumId: stadiumId,
                    page: page,
                    pageSize: pageSize
                },
                success: function (res) {
                    console.log("Load feedbacks response:", res);
                    if (res.success) {
                        currentPage = res.pagination.currentPage;
                        totalPages = res.pagination.totalPages;
                        totalCount = res.pagination.totalCount;

                        renderFeedbacks(res.data);
                        renderPagination(res.pagination);
                    } else {
                        $("#feedbackList").html(`<p class="text-red-500 text-center py-4">${res.message}</p>`);
                        $("#pagination-container").html('');
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Load feedbacks error:", {xhr, status, error});
                    $("#feedbackList").html("<p class='text-red-500 text-center py-4'>Có lỗi xảy ra khi tải feedback.</p>");
                    $("#pagination-container").html('');
                }
            });
        }

        function renderFeedbacks(feedbacks) {
            console.log("Rendering feedbacks:", feedbacks);
            let html = "";

            if (!feedbacks || feedbacks.length === 0) {
                html = `
                    <div class="text-center py-8">
                        <i class="fas fa-comment-slash text-gray-400 text-4xl mb-3"></i>
                        <p class="text-gray-500">Chưa có đánh giá nào cho sân này.</p>
                    </div>`;
            } else {
                feedbacks.forEach(fb => {
                    html += createFeedbackHtml(fb);
                });
            }

            $("#feedbackList").html(html);
        }

        // ✅ Render pagination controls
        function renderPagination(pagination) {
            if (!pagination || pagination.totalPages <= 1) {
                $("#pagination-container").html('');
                return;
            }

            let paginationHtml = `
                <div class="flex flex-col sm:flex-row items-center justify-between mt-6 p-4 bg-gray-50 rounded-lg">
                    <div class="text-sm text-gray-600 mb-3 sm:mb-0">
                        Hiển thị ${((pagination.currentPage - 1) * pagination.pageSize) + 1}-${Math.min(pagination.currentPage * pagination.pageSize, pagination.totalCount)}
                        trong tổng số ${pagination.totalCount} đánh giá
                    </div>
                    <div class="flex items-center space-x-2">`;

            // Previous button
            if (pagination.hasPreviousPage) {
                paginationHtml += `
                    <button onclick="loadFeedbacks(${stadiumId}, ${pagination.currentPage - 1})"
                            class="px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors duration-200">
                        <i class="fas fa-chevron-left mr-1"></i>Trước
                    </button>`;
            } else {
                paginationHtml += `
                    <button disabled class="px-3 py-2 text-sm bg-gray-100 text-gray-400 border border-gray-200 rounded-md cursor-not-allowed">
                        <i class="fas fa-chevron-left mr-1"></i>Trước
                    </button>`;
            }

            // Page numbers
            const startPage = Math.max(1, pagination.currentPage - 2);
            const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);

            if (startPage > 1) {
                paginationHtml += `
                    <button onclick="loadFeedbacks(${stadiumId}, 1)"
                            class="px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors duration-200">
                        1
                    </button>`;
                if (startPage > 2) {
                    paginationHtml += `<span class="px-2 text-gray-400">...</span>`;
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                if (i === pagination.currentPage) {
                    paginationHtml += `
                        <button class="px-3 py-2 text-sm bg-blue-500 text-white border border-blue-500 rounded-md cursor-default">
                            ${i}
                        </button>`;
                } else {
                    paginationHtml += `
                        <button onclick="loadFeedbacks(${stadiumId}, ${i})"
                                class="px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors duration-200">
                            ${i}
                        </button>`;
                }
            }

            if (endPage < pagination.totalPages) {
                if (endPage < pagination.totalPages - 1) {
                    paginationHtml += `<span class="px-2 text-gray-400">...</span>`;
                }
                paginationHtml += `
                    <button onclick="loadFeedbacks(${stadiumId}, ${pagination.totalPages})"
                            class="px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors duration-200">
                        ${pagination.totalPages}
                    </button>`;
            }

            // Next button
            if (pagination.hasNextPage) {
                paginationHtml += `
                    <button onclick="loadFeedbacks(${stadiumId}, ${pagination.currentPage + 1})"
                            class="px-3 py-2 text-sm bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors duration-200">
                        Sau<i class="fas fa-chevron-right ml-1"></i>
                    </button>`;
            } else {
                paginationHtml += `
                    <button disabled class="px-3 py-2 text-sm bg-gray-100 text-gray-400 border border-gray-200 rounded-md cursor-not-allowed">
                        Sau<i class="fas fa-chevron-right ml-1"></i>
                    </button>`;
            }

            paginationHtml += `
                    </div>
                </div>`;

            $("#pagination-container").html(paginationHtml);
        }

