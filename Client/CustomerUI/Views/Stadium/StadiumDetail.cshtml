        @@media (min-width: 640px) {
            .feedback-rating {
                margin-top: 0;
            }
        }

        /* Feedback image responsive */
        .feedback-image {
            max-width: 100%;
            max-height: 150px;
            width: auto;
            height: auto;
            object-fit: cover;
