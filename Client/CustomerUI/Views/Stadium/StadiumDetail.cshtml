        //LOAD EXISTING FEEDBACK 

        function loadExistingFeedback(feedback) {
            console.log("Loading existing feedback:", feedback);

            isEditMode = true;
            currentFeedbackId = feedback.id;

            // Update form title and button
            $('#form-title').text('Chỉnh sửa đánh giá của bạn');
            $('#submit-text').text('💾 Cập nhật phản hồi');
            $('#cancel-edit-btn').removeClass('hidden');
            $('#delete-feedback-btn').removeClass('hidden');

